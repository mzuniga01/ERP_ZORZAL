@model IEnumerable<ERP_GMEDINA.Models.SDP_Inv_tbProducto_Select_Result>
@using ERP_GMEDINA.Models

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <input type="text" id="search" placeholder="Buscar Productos" class="form-control" />
                    <table id="Table_BuscarProducto" class="table table table-striped  table-bordered">
                        <thead>
                            <tr>
                                <th>
                                   Descripcion
                                </th>
                                <th>
                                   Marca
                                </th>
                                <th>
                                   Modelo
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr tr data-html="@item.prod_CodigoBarras" , tr data-id="@item.prod_Codigo" , tr data-content="@item.prod_Descripcion" , tr data-container="@item.pscat_Descripcion" , tr data-keyboard="@item.uni_Descripcion">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prod_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prod_Marca)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prod_Modelo)
                                    </td>
                                    <td>
                                        <button class="btn btn-primary btn-xs" value="@item.prod_CodigoBarras" id="seleccionar" data-dismiss="modal">Seleccionar</button>
                                        @*@Html.ActionLink("", "_DetallesProductos", new { id = item.prod_Codigo }, new { @class = "btn btn-white btn-xs" })*@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="form-group">

</div>