@model ERP_GMEDINA.Models.tbSolicitudEfectivoDetalle
@using (Ajax.BeginForm("UpdateSolicitudEfectivoDetalle", "SolicitudEfectivo", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "EditarSolicitudEfectivoDetalle" }))


{

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.solef_Id)
        @Html.HiddenFor(model => model.soled_Id)

        @Html.HiddenFor(model => model.soled_UsuarioCrea)
        @Html.HiddenFor(model => model.soled_FechaCrea)
        @Html.HiddenFor(model => model.soled_UsuarioModifica)
        @Html.HiddenFor(model => model.soled_FechaModifica)




        <div class="form-group">
            @Html.LabelFor(model => model.solef_Id, new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @*@Html.DropDownList("solef_Id", String.Empty)*@
                @Html.EditorFor(model => model.solef_Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.solef_Id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.deno_Id, new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @*@Html.DropDownList("deno_Id", String.Empty)*@
                @Html.EditorFor(model => model.deno_Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.deno_Id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.soled_CantidadSolicitada, new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.soled_CantidadSolicitada)
                @Html.ValidationMessageFor(model => model.soled_CantidadSolicitada)
            </div>
        </div>





        <div class="form-group">
            <label class="control-label col-md-4">Monto Solicitado</label>
            <div class="col-md-7">
                <input id="MontoSolicitado" type="text" class="form-control" readonly />
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.soled_CantidadEntregada, new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.soled_CantidadEntregada, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.soled_CantidadEntregada)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.soled_MontoEntregado, new { @class = "control-label col-md-4" })
            <div class="col-md-7">
                @Html.EditorFor(model => model.soled_MontoEntregado, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.soled_MontoEntregado)
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary btn-sm" />
                @Html.ActionLink("Cancel", "Edit", null, new { @class = "btn btn-white" })
            </div>
        </div>
    </div>
}




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
