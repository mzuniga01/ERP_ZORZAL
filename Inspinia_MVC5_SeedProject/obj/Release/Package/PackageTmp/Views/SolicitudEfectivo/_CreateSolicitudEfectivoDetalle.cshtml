@model ERP_GMEDINA.Models.tbSolicitudEfectivoDetalle
@using ERP_GMEDINA.Models


<div class="wrapper wrapper-content ">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.deno_Id, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.DropDownListFor(model => model.deno_Id, new SelectList(" "), "Seleccione la Denominacion", new { @class = "form-control" })
                                <div id="validationDenoIdCreate">
                                    @Html.ValidationMessageFor(model => model.deno_Id, "", new { style = "Color:red" })
                                </div>
                            </div>

                            @Html.LabelFor(model => model.tbDenominacion.deno_valor, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.tbDenominacion.deno_valor, new { htmlAttributes = new { @id = "ValorDeno", @type = "number", @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.tbDenominacion.deno_valor)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.soled_CantidadSolicitada, new { @class = "control-label col-md-2" })

                            <div class="col-md-4">
                                <input type="text" id="soled_CantidadSolicitada" class="form-control" onKeyPress="return soloNumeros(event)" onKeyUp="pierdeFoco(this)" />
                                @*<input type="text" id="soled_CantidadSolicitada" class="form-control" onkeypress="return event.charCode >= 48 && event.charCode <= 57" onpast="return false" />*@
                                @*@Html.EditorFor(model => model.soled_CantidadSolicitada , new { htmlAttributes = new { @type = "number", onkeypress = "return disableEnterKey(event)" } })*@
                                <div id="validationCantidadSolicitadaCreate">
                                    @*@Html.ValidationMessageFor(model => model.soled_CantidadSolicitada)*@
                                </div>
                            </div>
                            <label class="control-label col-md-2">Monto Solicitado</label>
                            <div class="col-md-4">
                                <input id="MontoSolicitado" type="text" class="form-control" readonly=readonly />
                                @*@Html.EditorFor(model => model.MontoSolicitado, new { htmlAttributes = new {  @Value = "0.00", @type = "number", @class = "form-control", @readonly = "readonly" } })
                                    <div id="validationMontosSolicitadoCreate">
                                        @Html.ValidationMessageFor(model => model.MontoSolicitado)
                                    </div>*@
                                <br />
                                @*<input id="CantidadEntregada" value="0.00" type="text" class="form-control " readonly />
                                    <input id="MontoEntregado" value="0.00" type="text" class="form-control " readonly />*@
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.soled_CantidadEntregada, new { style = "display: none;", htmlAttributes = new { @Value = "0.00", @type = "number", @class = "form-control", @readonly = "readonly" } })
                                    <div id="validationCantidadEntregadaCreate">
                                        @Html.ValidationMessageFor(model => model.soled_CantidadEntregada)
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.soled_MontoEntregado, new { style = "display: none;", htmlAttributes = new { @Value = "0.00", @type = "number", @class = "form-control", @readonly = "readonly" } })
                                    <div class="validationMontoEntregadoCreate">
                                        @Html.ValidationMessageFor(model => model.soled_MontoEntregado)
                                    </div>
                                </div>


                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-2">
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-primary" type="button" id="AgregarDetalle">Añadir</button>
                            </div>
                        </div>

                    </div>
                </div>
                <div class="table-responsive">
                    <table id="tblSolicitudEfectivoDetalle" class="table table-striped table-bordered table-hover dataTables-example">
                        <thead>
                            <tr>
                                <th scope="col">Denominación</th>
                                <th scope="col"> Cantidad Solicitada</th>
                                <th scope="col"> Monto Solicitado</th>
                                <th scope="col">Cantdad Entregada</th>
                                <th scope="col">Monto Entregado</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot>
                            <tr>
                                <th></th>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                            </tr>

                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.js"></script>
