@model IEnumerable<ERP_GMEDINA.Models.tbFacturaDetalle>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input id="searchProducto" type="text" class="form-control" placeholder="Buscar Producto" />
                            <br />
                        </div>
                    </div>
                </div>
                <div class="ibox-content">

                    <table id="DataTable1" class="table table table-striped  table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.tbProducto.prod_Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.factd_Cantidad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.factd_PorcentajeDescuento)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.factd_PrecioUnitario)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="BodyProducto">
                            @foreach (var item in Model)
                            {
                                <tr data-id="@item.prod_Codigo" data-desc="@item.tbProducto.prod_Descripcion" data-Valor="@item.factd_PrecioUnitario" data-Impuesto="@item.factd_Impuesto" data-Porcentaje="@item.factd_PorcentajeDescuento" data-CantFacturada="@item.factd_Cantidad">

                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbProducto.prod_Descripcion)

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.factd_Cantidad)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.factd_PorcentajeDescuento)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.factd_PrecioUnitario)
                                        @Html.HiddenFor(modelItem => item.factd_Cantidad)
                                        @Html.HiddenFor(modelItem => item.factd_Impuesto)
                                    </td>
                                    <td>
                                        <button id="Agregar" class="btn btn-primary btn-xs">Agregar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script>
    $(document).ready(function () {
        $('#DataTable1').DataTable(
        {
            "searching": false,
            "lengthChange": false,

            "oLanguage": {
                "oPaginate": {
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior",
                },
                "sEmptyTable": "No hay registros",
                "sInfoEmpty": "Mostrando 0 de 0 Entradas",
                "sSearch": "Buscar",
                "sInfo": "Mostrando _START_ a _END_ Entradas",

            }
        });
    });
</script>


