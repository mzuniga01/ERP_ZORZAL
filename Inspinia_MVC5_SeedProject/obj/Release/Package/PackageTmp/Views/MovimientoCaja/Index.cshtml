@model IEnumerable<ERP_GMEDINA.Models.tbMovimientoCaja>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Arqueo Caja</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong></strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado Arqueo Caja</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Registrar Arqueo Caja", "Create", null, new { @class = "btn btn-primary"})
					</div>
                </div>
                <div class="ibox-content">

<table class="table table-striped table-responsive table-bordered table-hover" id="DataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tbCaja.tbSucursal.suc_Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbCaja.cja_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mocja_FechaApertura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mocja_FechaArqueo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mocja_FechaAceptacion)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tbCaja.tbSucursal.suc_Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbCaja.cja_Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mocja_FechaApertura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mocja_FechaArqueo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mocja_FechaAceptacion)
                </td>

                <td>
                    @Html.ActionLink("Detalle", "Details", new { id = item.mocja_Id }, new { @class = "btn btn-primary btn-xs" })
                    @Html.ActionLink("Editar", "Edit", new { id = item.mocja_Id }, new { @class = "btn btn-primary btn-xs" })
                    <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#ModalImprimir">
                        Imprimir
                    </button>

                </td>
            </tr>
        }
    </tbody>

</table>

                </div>
            </div>
        </div>
    </div>
 </div>


<div class="modal fade" id="ModalImprimir" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Imprimir Arqueo de Caja</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Desea Imprimir Arqueo de Caja?
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Index","MovimientoCaja")" class="btn btn-primary">Si</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>



<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/MovientoCaja.js"></script>
