@model IEnumerable<ERP_GMEDINA.Models.tbExoneracion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Exoneración</h2>
      
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado Exoneración</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Registrar Exoneración", "Create", null, new { @class = "btn btn-primary"})
					</div>
                </div>
                <div class="ibox-content">

                    <table id="DataTable" class="table table table-striped  table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Cliente
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.exo_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.exo_Documento)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.exo_ExoneracionActiva)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.exo_FechaInicialVigencia)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.exo_FechaIFinalVigencia)
                                </th>
                              
                                
                                <th>Acciones</th>
                            </tr>

                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @*<td>
                                        @Html.DisplayFor(modelItem => item.tbCliente.clte_Nombres)

                                    </td>*@
                                    @{ if (item.tbCliente.clte_EsPersonaNatural == true)
                                        {
                                            <td>
                                                @Html.DisplayFor(modelItem => item.tbCliente.clte_Nombres)
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                @Html.DisplayFor(modelItem => item.tbCliente.clte_NombreComercial)
                                            </td>
                                        }
                                    }
                                    
                                    <td>
                                        @Html.DisplayFor(modelItem => item.exo_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.exo_Documento)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.exo_ExoneracionActiva)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.exo_FechaInicialVigencia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.exo_FechaIFinalVigencia)
                                    </td>
                                   
                                    
                                    <td>
                                        @Html.ActionLink("Detalle", "Details", new { id = item.exo_Id }, new { @class = "btn btn-primary btn-xs" })
                                        @Html.ActionLink("Editar", "Edit", new { id = item.exo_Id }, new { @class = "btn btn-white btn-xs" })
                                       
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>


                </div>
            </div>
        </div>
    </div>
 </div>



<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>
