@model ERP_GMEDINA.Models.tbMoneda

@{
    ViewBag.Title = "Moneda";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Moneda</h2>
        
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Index","Moneda")">Regresar</a>
            @*<a href="/Moneda/Index">Regresar</a>*@
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Moneda</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)



        <div class="form-group">
            <label class="control-label col-md-2">Abreviatura</label>

            <div class="col-md-5">
                @Html.EditorFor(model => model.mnda_Abreviatura)
                <p style="color:red"> @Html.ValidationMessageFor(model => model.mnda_Abreviatura)
</div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nombre</label>

            <div class="col-md-5">
                @Html.EditorFor(model => model.mnda_Nombre)
                <p style="color:red">@Html.ValidationMessageFor(model => model.mnda_Nombre)
</div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
				@Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white"})
            </div>
        </div>
    </div>
}

                </div>
            </div>
        </div>
    </div>
 </div>

 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/Monedas.js"></script>