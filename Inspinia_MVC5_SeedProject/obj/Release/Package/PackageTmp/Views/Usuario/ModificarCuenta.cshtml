@model ERP_GMEDINA.Models.tbUsuario

@{
    ViewBag.Title = "ModificarCuenta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .validation-error {
        color: red;
        font-size: small;
    }

    .validation-summary-errors {
        color: red;
        font-size: small;
    }

    .required:after {
        content: "*";
        font-weight: bold;
        color: red;
    }
</style>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Modificar Cuenta</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index", null, new { @class = "" })
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.usu_Id)
                            @Html.HiddenFor(model => model.usu_NombreUsuario)
                            @Html.HiddenFor(model => model.suc_Id)
                            @Html.HiddenFor(model => model.emp_Id)
                             @Html.HiddenFor(model => model.usu_EsActivo, new {  @id = "usu_EsActivo" })
                            @Html.Hidden("ConfirmarPassword", (string)ViewBag.ConfirmarPassword)
                            <div><br /><br /></div>
                            <div class="form-group" style="padding-right:220px">
                                @Html.LabelFor(model => model.usu_Nombres, new { @class = "control-label col-md-2 , required" })
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.usu_Nombres, new { @class = "form-control", maxlength = "150", @onKeyPress = "return soloLetras(event)" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.usu_Nombres)</p>

                                </div>
                    
                            </div>

                            <div class="form-group" style="padding-right:220px">
                                @Html.LabelFor(model => model.usu_Apellidos, new { @class = "control-label col-md-2 , required" })
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.usu_Apellidos, new { @class = "form-control", maxlength = "150", @onKeyPress = "return soloLetras(event)" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.usu_Apellidos)</p>
                                </div>

                            </div>

                                <div class="form-group" style="padding-right:220px">
                                   
                                    @Html.LabelFor(model => model.usu_Correo, new { @class = "control-label col-md-2 , required" })
                                    <div class="col-md-4">
                                        @Html.TextBoxFor(model => model.usu_Correo, new { @class = "form-control", maxlength = "150", @onKeyPress = "return Caracteres_Email(event)", @onkeyup = "this.value=CorreoElectronico(this.value)" })
                                        <p style="color:red">@Html.ValidationMessageFor(model => model.usu_Correo)</p>
                                    </div>
                                </div>

                            <div class="form-group" style="padding-right:220px">
                                @Html.HiddenFor(model => model.usu_EsActivo, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.HiddenFor(model => model.usu_EsActivo, new {  @id = "usu_EsActivo" })
                                    @Html.ValidationMessageFor(model => model.usu_EsActivo)
                                </div>
                               
                                @Html.HiddenFor(model => model.usu_EsAdministrador, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.HiddenFor(model => model.usu_EsAdministrador, new { htmlAttributes = new { @class = "checkbox-inline" } })
                                    @Html.ValidationMessageFor(model => model.usu_EsAdministrador)
                                </div>
                            </div>

                            <div class="form-group" style="padding-right:220px" id="usu_RazonInactivo">
                                @Html.LabelFor(model => model.usu_RazonInactivo, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.HiddenFor(model => model.usu_RazonInactivo)
                                    @Html.ValidationMessageFor(model => model.usu_RazonInactivo)
                                </div>
                            </div>

                            <div class="form-group" style="padding-right:220px">

                                @Html.LabelFor(model => model.usu_Password, new { @class = "control-label col-md-2 invisible" })
                                <div class="col-md-10">
                                    @Html.HiddenFor(model => model.usu_Password, new { @value = "password" })
                                    @*<input class="text-box single-line invisible" data-val="true" data-val-required="El campo Usuario es requerido" id="usu_Password" name="usu_Password" type="text" value="">*@
                                </div>
                                <div class="col-md-12 text-center">
                                    <button type="submit" id="btnActualizarRol" class="btn btn-primary">Guardar</button>
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>

                            
                            
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</div>




<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/app/MostrarOcultar.js"></script>
<script src="~/Scripts/app/RolesUsuarioEdit.js"></script>
