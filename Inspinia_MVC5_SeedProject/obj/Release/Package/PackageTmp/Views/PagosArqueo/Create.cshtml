@model ERP_GMEDINA.Models.tbPagosArqueo

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .validation-error {
        color: red;
        font-size: small;
    }
</style>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Pagos Arqueo</h2>

    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Index","PagosArqueo")">Regresar</a>
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Pagos Arqueo</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.mocja_Id, "Movimiento Caja", new { @class = "control-label col-md-2" })
            <div class="col-md-4">
               @Html.DropDownList("mocja_Id", (IEnumerable<SelectListItem>)ViewBag.mocja_Id, new { @class = "form-control" })
                <span class="validation-error">@Html.ValidationMessageFor(model => model.mocja_Id)</span>
</div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.tpa_Id, "Tipo Pago", new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.DropDownList("tpa_Id", (IEnumerable<SelectListItem>)ViewBag.tpa_Id, new { @class = "form-control" })
                <span class="validation-error">@Html.ValidationMessageFor(model => model.tpa_Id)</span>
</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.arqpg_PagosSistema, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.arqpg_PagosSistema)
                <span class="validation-error">@Html.ValidationMessageFor(model => model.arqpg_PagosSistema)</span>
</div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.arqpg_PagosConteo, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.arqpg_PagosConteo)
                <span class="validation-error">@Html.ValidationMessageFor(model => model.arqpg_PagosConteo)</span>
</div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-5 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
				@Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white"})
            </div>
        </div>
    </div>
}

                </div>
            </div>
        </div>
    </div>
 </div>

 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script>
        jQuery('input,select').each(function () {
            var req = jQuery(this).attr('data-val-required');
            if (undefined != req) {
                var label = jQuery('label[for="' + jQuery(this).attr('id') + '"]');
                var text = label.text();
                if (text.length > 0) {
                    label.append('<span style="color:red"> *</span>');
                }
            }
        });

</script>
}
