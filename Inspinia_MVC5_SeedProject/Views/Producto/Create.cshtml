@model ERP_GMEDINA.Models.tbProducto


@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var test = new ERP_GMEDINA.Models.tbProductoSubcategoria();
}
<style>
    .validation-error {
        color: red;
        font-size: small;
    }
    
    .required:after {
        content: "*";
        font-weight: bold;
        color: red;
    }
    .MayusText {
        text-transform:uppercase;
    }
</style>


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Producto</h2>
    </div>

    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Index","Producto")">Regresar</a>
        </div>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Producto</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.pcat_Id,new { @class = "control-label col-md-2 , required" })                       
                            <div class="col-md-4">

                                @Html.DropDownList("pcat_Id", (IEnumerable<SelectListItem>)ViewBag.pcat_Id, "Seleccione una Categoria", new { @class = "form-control" })
