@model ERP_GMEDINA.Models.tbProducto


@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var test = new ERP_GMEDINA.Models.tbProductoSubcategoria();
}
<style>
    .validation-error {
        color: red;
        font-size: small;
    }
    
    .required:after {
        content: "*";
        font-weight: bold;
        color: red;
    }
</style>


<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Producto</h2>
    </div>

    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Index","Producto")">Regresar</a>
        </div>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Producto</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.pcat_Id,new { @class = "control-label col-md-2 , required" })                       
                            <div class="col-md-4">

                                @Html.DropDownList("pcat_Id", null, "Seleccione una Categoria", new { @class = "form-control" })
                                <p style="color:red">@Html.ValidationMessageFor(subcat => test.pcat_Id)</p>
                            </div>
                            @Html.LabelFor(model => model.pscat_Descripcion, new { @class = "control-label col-md-2 , required" })                       
                            <div class="col-md-4">

                                @Html.DropDownList("pscat_Id",null, "Seleccione una Subcategoria", new { @class = "single-line" })
                                <p style="color:red">@Html.ValidationMessageFor(model => model.pscat_Id)</p>
                            </div>

                        </div>
                        
                            <div class="form-group">
                               @Html.LabelFor(model => model.prod_Codigo, new { @class = "control-label col-md-2 , required" })
                                   
                                    <div class="col-md-4">                                     
                                        @Html.EditorFor(model => model.prod_Codigo, new { htmlAttributes = new { @id = "CodigoPro", @class = "form-control", @readonly = "readonly" } })
                                        <p style="color:red">@Html.ValidationMessageFor(model => model.prod_Codigo)</p>
                                    </div>

                                @Html.LabelFor(model => model.prod_CodigoBarras, new { @class = "control-label col-md-2" })
                                  
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.prod_CodigoBarras, new { @class = "form-control" })                                                                                
                                        <p style="color:red">@Html.ValidationMessageFor(model => model.prod_CodigoBarras)</p>                                                                                
                                    </div>
                        </div>
                        

                            <div class="form-group">
                                @Html.LabelFor(model => model.prod_Descripcion, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.prod_Descripcion, new { @class = "form-control"})
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.prod_Descripcion)</p>
                                </div>

                                @Html.LabelFor(model => model.prod_Marca, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.prod_Marca, new { @class = "form-control col-md" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.prod_Marca)</p>
                                </div>
                             
                                
                            </div>
                           
                            <div class="form-group">
                                @Html.LabelFor(model => model.prod_Modelo, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.prod_Modelo, new { @class = "form-control" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.prod_Modelo)</p>
                                </div>
                              
                                @Html.LabelFor(model => model.prod_Color, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.prod_Color)
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.prod_Color)</p>
                                </div>                              
                            </div>

                            <div class="form-group">
                               @Html.LabelFor(model => model.prod_Talla, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.prod_Talla, new { @class = "form-control" })
                                <p style="color:red">@Html.ValidationMessageFor(model => model.prod_Talla)</p>
                            </div>
                                @Html.LabelFor(model => model.uni_Descripcion, new { @class = "control-label col-md-2 , required" })
                                <div class="col-md-4">
                                    @Html.DropDownList("uni_Id", (IEnumerable<SelectListItem>)ViewBag.uni_Id, "Seleccione una Unidad", new { @class = "form-control" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.uni_Id)</p>
                                </div> 
                            </div>
                      
                        <div class="form-group">
                            
                            <div class="col-lg-12">
                                <br /><br />
                                <center>
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </center>

                            </div>
                        </div>
                        </div>
                        }

                    </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.js"></script>
