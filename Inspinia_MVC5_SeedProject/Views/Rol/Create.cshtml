@model ERP_GMEDINA.Models.tbRol

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Rol</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</div>

<style>
    #rol_Descripcion {
        text-transform: uppercase;
    }
</style>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Rol</h5>
                </div>
                <div class="ibox-content">

                    <div class="form-horizontal">
                        <style>
                            /*.table-wrapper-scroll-y {
                                display: block;
                                
                            }
                            .my-custom-scrollbar {
                                position: relative;
                                height: 300px;
                                overflow: auto;
                            }*/
                            #NoAsignados {
                                display: block;
                                position: relative;
                                height: 335px;
                                overflow: auto;
                            }
                            .dataTables_filter {
                                /*text-align: left !Important;*/
                                float: left !Important;
                            }
                            #Asignados {
                                display: block;
                                position: relative;
                                height: 335px;
                                overflow: auto;
                            }
                        </style>


                        <div class="form-group">
                            <label class="control-label col-md-2">Descripción Rol<span style="color:red"> *</span></label>
                            @*@Html.LabelFor(model => model.rol_Descripcion, new { @class = "control-label col-md-2" })*@
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.rol_Descripcion, new { @maxlength = "100", @autocomplete = "off" })
                                <div id="validationDescripcionRol">
                                    <p style="color:red"></p>
                                </div>
                            </div>
                        </div>
                        <div style="width:100%" class="ibox-content">
                            <div style="width:45%" class="col-md-5">
                                <label class="col-md-10" style="text-align:center">Pantallas No Asignadas</label>
                                    <table class="table table-striped table-responsive table-bordered table-hover" style="border:0px" id="NoAsignados">
                                        <thead>
                                            <tr>
                                                <td style="background-color:#1ab394;color:white" id="RegistrosNoAsignados">Pantallas</td>
                                                <td style="background-color:#1ab394"></td>
                                            </tr>
                                        </thead>
                                        <tbody></tbody>
                                    </table>
                            </div>

                            <div style="width:10%" class="col-md-2">
                                <br /><br /><br>
                                <div>
                                    <input id="Add" type="button" disabled value="Agregar &#9658;" class="btn btn-primary btn-xs" />
                                </div>
                                <div>
                                    <input id="Remove" type="button" disabled value="&#9668; Quitar &nbsp;&nbsp;" class="btn btn-primary btn-xs" />
                                </div>
                            </div>

                            <div style="width:45%" class="col-md-5">
                                <label class="col-md-10" style="text-align:center">Pantallas Asignadas</label>
                                <table class="table table-striped table-responsive table-bordered table-hover" style="border:0px" id="Asignados">
                                    <thead>
                                        <tr>
                                            <td id="RegistrosAsignados" style="background-color:#1ab394;color:white">Pantallas</td>
                                            <td style="background-color:#1ab394"></td>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                            <div class="form-group">
                                <div class="col-md-12 text-center">
                                    <button type="button" id="btnGuardarRol" class="btn btn-primary">Guardar</button>
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/app/RolObjetos.js"></script>
