@model ERP_GMEDINA.Models.tbObjeto
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutFacturacion.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Reportes</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Index", "Home")">Regresar</a>
        </div>
    </div>
</div>


    <div class="wrapper wrapper-content animated fadeInRight">
    @using (Html.BeginForm("Index", "Reportes", FormMethod.Post, new { target = "_blank" }))
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Filtros</h5>
                    </div>
                    <div class="ibox-content">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="control-label col-md-2">Tipo Reporte</label>
                                <div class="col-md-10">
                                    @Html.DropDownList("obj_Id", null, "Seleccione el Reporte", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Fecha Desde:</label>
                                <div class="col-md-4">
                                    <input type="text" id="FechaDesde" name="FechaDesde" class="form-control" />
                                </div>

                                <label class="control-label col-md-2">Fecha Hasta:</label>
                                <div class="col-md-4">
                                    <input type="text" id="FechaHasta" name="FechaHasta" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-12 text-center">
                                    <input type="submit" value="Aceptar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="FiltrosReporteVentasEntreFechas" hidden>
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5></h5>
                        </div>
                        <div class="ibox-content">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="control-label col-md-2">Tipo Factura</label>
                                    <div class="col-md-4">
                                        <select name="TipoFactura" class="form-control">
                                            <option value="">Seleccione</option>
                                            <option value="Crédito">Crédito</option>
                                            <option value="Contado">Contado</option>
                                        </select>
                                    </div>

                                    <label class="control-label col-md-2">Cliente</label>
                                    <div class="col-md-4">
                                        @Html.DropDownList("clte_Identificacion", null, "Seleccione el Cliente", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="FiltrosReporteCajaFechas" hidden>
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5></h5>
                        </div>
                        <div class="ibox-content">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="control-label col-md-2">Sucursal</label>
                                    <div class="col-md-4">
                                        @Html.DropDownList("suc_Id", null, "Seleccione la Sucursal", new { @class = "form-control" })
                                    </div>

                                    <label class="control-label col-md-2">Caja</label>
                                    <div class="col-md-4">
                                        <select name="cja_Id" id="cja_Id" class="form-control">
                                            <option value="">Seleccione la Caja</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="control-label col-md-2">Cajero</label>
                                    <div class="col-md-10">
                                        @Html.DropDownList("fact_UsuarioCrea", null, "Seleccione el Cajero", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="FiltrosReporteFacturasPendientes" hidden>
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5></h5>
                        </div>
                        <div class="ibox-content">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="control-label col-md-2">Cliente</label>
                                    <div class="col-md-10">
                                        @Html.DropDownList("clte_Identificacion_", null, "Seleccione el Cliente", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="FiltrosReporteNotaCredito" hidden>
            <div class="row">
                <div class="col-lg-12">
                    <div class="ibox float-e-margins">
                        <div class="ibox-title">
                            <h5></h5>
                        </div>
                        <div class="ibox-content">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="control-label col-md-2">Cliente</label>
                                    <div class="col-md-4">
                                        @Html.DropDownList("clte_Identificacion_1", null, "Seleccione el Cliente", new { @class = "form-control" })
                                    </div>

                                    <label class="control-label col-md-2">¿Es Cliente Natural?</label>
                                    <div class="col-md-4">
                                        <input type="checkbox" id="clte_EsPersonaNatural" name="clte_EsPersonaNatural" checked="checked" value="true"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
    
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/app/Datepicker.js"></script>
<script src="~/Scripts/app/Reportes.js"></script>




