                                        @Html.EditorFor(model => model.fact_Id, new { htmlAttributes = new { @onkeypress = "return solonumeros(event)", @autocomplete = "off" } })
                                        <div class="col-md-10">
                                            <p id="factu" style="color:red">@Html.ValidationMessageFor(model => model.fact_Id)</p>
                                        </div>
                                    </div>
                                </div>
