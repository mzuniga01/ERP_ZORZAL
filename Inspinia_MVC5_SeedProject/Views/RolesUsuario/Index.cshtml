@model IEnumerable<ERP_ZORZAL.Models.tbRolesUsuario>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        @*<h2>Index</h2>
            <ol class="breadcrumb">
                <li class="active">
                    <strong>tbRolesUsuario</strong>
                </li>
            </ol>*@
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Roles a Usuario</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Registrar Rol a Usuario", "Create", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped" style="width:100%;" id="Datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.tbRol.rol_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.tbRol.rol_Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.tbUsuario.usu_NombreUsuario)
                                </th>
                                @*<th>
                                        @Html.DisplayNameFor(model => model.rolu_UsuarioCrea)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.rolu_FechaCrea)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.rolu_UsuarioModifica)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.rolu_FechaModifica)
                                    </th>*@

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @foreach (var item in Model)
                                {

                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbRol.rol_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbRol.rol_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbUsuario.usu_NombreUsuario)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Detalles", "Details", new { id = item.rolu_Id }, new { @class = "btn btn-primary btn-xs" })
                                        @Html.ActionLink("Editar", "Edit", new { id = item.rolu_Id }, new { @class = "btn btn-primary btn-xs" })
                                    </td>

                                }
                            </tr>
                        </tbody>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.rolu_UsuarioCrea)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.rolu_FechaCrea)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.rolu_UsuarioModifica)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.rolu_FechaModifica)
                            </td>*@
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/Scripts/app/DataTable.js"></script>

}