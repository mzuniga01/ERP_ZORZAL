@model IEnumerable<ERP_ZORZAL.Models.tbFactura>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Factura</h2>
        @*<ol class="breadcrumb">
            <li class="active">
                <strong>tbFactura</strong>
            </li>
        </ol>*@
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Facturas</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Registrar Factura", "Create", null, new { @class = "btn btn-primary btn-xs" })
                    </div>
                    <div class="ibox-content">
                        <div class="form-horizontal">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="control-label col-md-2">Numero Factura</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control "/>
                                    </div>
                                    <label class="control-label col-md-2">RTN-Identidad</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="control-label col-md-2">Nombre</label>
                                    <div class="col-md-4">
                                        <input type="text" class="form-control " />
                                    </div>
                                    <label class="control-label col-md-2">Fecha</label>
                                    <div class="col-md-3">
                                        <input type="text" class="form-control" />
                                    </div>
                                    <div class="">
                                        <input type="button" value="Buscar" class="btn btn-primary btn-sm" />
                                    </div>
                                </div>
                            </div>
                        </div>

                        <table id="DataTable1" class="table table table-striped  table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.fact_Codigo)
                                    </th>
                                    @*<th>
                                            @Html.DisplayNameFor(model => model.fact_Fecha)
                                        </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.esfac_Id)
                                      
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.cja_Id)
                                    </th>
                                    @*<th>
                                            @Html.DisplayNameFor(model => model.suc_Id)
                                        </th>*@
                                    <th>
                                        @Html.DisplayNameFor(model => model.clte_Id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.pemi_NumeroCAI)
                                    </th>
                                    @*<th>
                                            @Html.DisplayNameFor(model => model.fact_AlCredito)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.fact_DiasCredito)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.fact_PorcentajeDescuento)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.fact_AutorizarDescuento)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.fact_Vendedor)
                                        </th>*@
                                    @*<th>
                                            @Html.DisplayNameFor(model => model.clte_RTN_Identidad_Pasaporte)
                                        </th>*@
                                    @*<th>
                                            @Html.DisplayNameFor(model => model.clte_Nombres)
                                        </th>*@
                                    @*<th>
                                            @Html.DisplayNameFor(model => model.fact_UsuarioCrea)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.fact__FechaCrea)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.fact__UsuarioModifica)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.fact_FechaModifica)
                                        </th>*@
                                    <th> Acciones</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.fact_Codigo)
                                        </td>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.fact_Fecha)
                                        </td>*@
                                        <td>
                                            @*@Html.DisplayFor(modelItem => item.esfac_Id)*@
                                              @Html.DisplayFor(model => item.tbEstadoFactura.esfac_Descripcion)
                                        </td>
                                        <td>
                                            @*@Html.DisplayFor(modelItem => item.cja_Id)*@
                                          
                                            @Html.DisplayFor(model => item.tbCaja.cja_Descripcion)
                                        </td>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.suc_Id)
                                        </td>*@
                                        <td>
                                            @*@Html.DisplayFor(modelItem => item.clte_Id)*@
                                            @Html.DisplayFor(model => item.tbCliente.clte_Nombres)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.pemi_NumeroCAI)
                                        </td>
                                        @*<td>
                                            @Html.DisplayFor(modelItem => item.fact_AlCredito)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.fact_DiasCredito)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.fact_PorcentajeDescuento)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.fact_AutorizarDescuento)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.fact_Vendedor)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.clte_RTN_Identidad_Pasaporte)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.clte_Nombres)
                                        </td>*@
                                        @*<td>
                                                @Html.DisplayFor(modelItem => item.fact_UsuarioCrea)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.fact__FechaCrea)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.fact__UsuarioModifica)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.fact_FechaModifica)
                                            </td>*@
                                        <td>
                                            @Html.ActionLink("Editar", "Edit", new { id = item.fact_Id }, new { @class = "btn btn-white btn-sm" })                                          
                                            <button type="button" class="btn btn-white btn-sm" data-toggle="modal" data-target="#ModalImprimir">
                                                Imprimir
                                            </button>
                                            <button type="button" class="btn btn-white btn-sm" data-toggle="modal" data-target="#exampleModal">
                                                Anular
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Anular factura</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
               ¿Está seguro de anular esta factura?
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Index","Factura")" class="btn btn-primary">Si</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>               
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="ModalImprimir" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Imprimir Factura</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Desea Imprimir Factura?
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Index","Factura")" class="btn btn-primary">Si</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/DataTableBusquedaGenerica.js"></script>
