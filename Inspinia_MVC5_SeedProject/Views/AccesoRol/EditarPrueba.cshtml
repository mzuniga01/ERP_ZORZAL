@model ERP_ZORZAL.Models.tbAccesoRol

@{
    ViewBag.Title = "EditarPrueba";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Acceso Rol</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
			@Html.ActionLink("Regresar al Listado", "Index", null, new { @class = "btn btn-primary"})
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Editar Acceso Rol</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.acrol_Id)

        <div class="form-group">
            <label class="control-label col-md-2">Rol</label>
            <div class="col-md-10">
                <select id="Select1">
                    <option>Rol #1</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Objeto</label>
            <div class="col-md-10">
                <select id="Select1">
                    <option>Obj #1</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Acceso Rol</label>
            <div class="col-md-10">
                <input type="text" class="text-box single-line" value="Solo Lectura" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Guardar" class="btn btn-primary" />
				@Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white"})
            </div>
        </div>
    </div>
}


                </div>
            </div>
        </div>
    </div>
 </div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
