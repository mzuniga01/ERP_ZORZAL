@model IEnumerable<ERP_GMEDINA.Models.tbProductoSubcategoria>

@using ERP_GMEDINA.Models

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Producto Subcategoría</h5>
					<div class="ibox-tools">
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#SubCategoria">
                            Registrar SubCategoría
                        </button>
					</div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-responsive table-bordered table-hover" style="width:100%" id="Datatable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.pscat_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pscat_Descripcion)
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pscat_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pscat_Descripcion)
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-primary btn-xs" data-toggle="modal" data-target="#ModalDetalles_@item.pscat_Id">
                                            Detalle
                                        </button>
                                        <button type="button" class="btn btn-white btn-xs" data-toggle="modal" data-target="#ModalEditar_@item.pscat_Id">
                                            Editar
                                        </button>
                                        <input type="button" class="btn btn-white btn-xs" data-toggle="modal" data-target="#exampleModal" value="Anular" />
                                        <input type="button" id="boton" value="Inactivar" class="btn btn-white btn-xs">
                                    </td>
                                </tr>
                                <div>
                                    <div class="modal fade" id="ModalDetalles_@item.pscat_Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                    <h4 class="modal-title" id="myModalLabel">Detalle SubCategoría</h4>
                                                </div>
                                                <div class="modal-body" id="frmEditarCasoExito">
                                                    @Html.Partial("_DetailsSubCategoria", new ERP_GMEDINA.Models.tbProductoSubcategoria() { pscat_Id = item.pscat_Id, pscat_Descripcion = item.pscat_Descripcion, pscat_EsActiva = item.pscat_EsActiva, pcat_Id = item.pcat_Id })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                    </table>



                </div>
            </div>
        </div>
    </div>
 </div>
<div class="modal fade" id="SubCategoria" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="row">
                    @Html.Partial("_CreateSubCategoriaModal", new tbProductoSubcategoria())
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                    <button class="btn btn-primary" type="button" id="AgregarSubCategoria">Añadir</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Anular SubCategorìa</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ¿Está seguro de anular esta SubCategorìa?
            </div>
            <div class="modal-footer">
                <a href="@Url.Action("Index","ProductoCategoria")" class="btn btn-primary">Si</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>
<script src="~/Scripts/app/Categoria.js"></script>
