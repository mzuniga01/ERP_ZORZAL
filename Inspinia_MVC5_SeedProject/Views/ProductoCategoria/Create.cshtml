@model ERP_GMEDINA.Models.tbProductoCategoria
@using ERP_GMEDINA.Models

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .validation-error {
        color: red;
        font-size: small;
    }
    .validation-summary-errors {
        color: red;
        font-size: small;
    }

     .required:after {
        content: "*";
        font-weight: bold;
        color: red;
    }
    #pcat_Nombre {
        text-transform: uppercase;
    }
</style>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Producto Categoría</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</div>
@using (Html.BeginForm("Create", "ProductoCategoria", FormMethod.Post, new { encenctype = "multipart/form-data" }))
{
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Ingresar Producto Categoría</h5>
                </div>

                <div class="ibox-content">
                    @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)

                            <div class="form-group">
                                @Html.LabelFor(model => model.pcat_Nombre, new { @class = "control-label col-md-2 , required" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.pcat_Nombre, new { htmlAttributes = new { @onkeypress = "return soloLetras(event)" ,  @maxlength = "50", @autocomplete = "off" } })
                                    <p style="color:red">
                                        @Html.ValidationMessageFor(model => model.pcat_Nombre)
                                    </p>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary" id="bton" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>         
                </div>
                
            </div>
            @* Modal *@
            <div class="form-horizontal">
                @Html.Partial("_CreateSubCategoria", new tbProductoSubcategoria())
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/app/Categoria.js"></script>
}


