@model ERP_GMEDINA.Models.tbProductoSubcategoria
@using ERP_GMEDINA.Models



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">

                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        @Html.HiddenFor(model => model.pscat_Id)

                        @Html.HiddenFor(model => model.pscat_Descripcion)

                        @Html.HiddenFor(model => model.pcat_Id)
                        @Html.HiddenFor(model => model.pscat_UsuarioCrea)
                        @Html.HiddenFor(model => model.pscat_FechaCrea)
                        @Html.HiddenFor(model => model.pscat_UsuarioModifica)
                        @Html.HiddenFor(model => model.pscat_FechaModifica)
                        @Html.HiddenFor(model => model.pscat_ISV)

                        <form id="form">

                            <fieldset id="SubmitForm">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.pscat_Id, new { @class = "control-label col-sm-2" })
                                    <div class="col-sm-10">
                                        @Html.EditorFor(model => model.pscat_Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.pscat_Id)
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.pscat_Descripcion, new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.pscat_Descripcion, new { htmlAttributes = new { @onkeypress = "return soloLetras(event)", @id = "DescripcionEdit",  @maxlength = "150" , @autocomplete = "off" , @style = "text-transform:uppercase;" } })
                                        <p style="color:red">
                                            @Html.ValidationMessageFor(model => model.pscat_Descripcion)
                                        </p>

                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.pcat_Id, new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.pcat_Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly", @min ="1" } })
                                            @Html.ValidationMessageFor(model => model.pscat_ISV)
                                    
                                    </div>
                                </div>


                                <div class="form-group">
                                    @Html.LabelFor(model => model.pscat_ISV, new { @class = "control-label col-sm-2" })
                                    <div class="col-sm-10">

                                        @Html.EditorFor(model => model.pscat_ISV, new { htmlAttributes = new { @onkeyup = "format(this)", @autocomplete = "off", @id = "ISVedit" } })
                                        <p style="color:red">
                                            @Html.ValidationMessageFor(model => model.pscat_ISV)
                                        </p>

                                    </div>
                                </div>
                            </fieldset>

                        </form>
                        

                        
                        <div class="form-group">
                            <hr />
                            <div class="col-md-12 text-right">
                                <input type="submit" id="modal" value="Guardar" class="btn btn-primary" />
                                @Html.ActionLink("Cancelar", "Edit", null, new { @class = "btn btn-white" })
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
