                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>*@

                            <table id="TablaSub" class="table table table-striped">
                                <thead>
                                    <tr>
                                        <th>Descripción</th>
                                        <th>Impuesto sobre la Renta</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody></tbody>
                            </table>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>





