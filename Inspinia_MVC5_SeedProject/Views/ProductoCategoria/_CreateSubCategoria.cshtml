@model ERP_GMEDINA.Models.tbProductoSubcategoria

@using ERP_GMEDINA.Models
<style>
    .validation-error {
        color: red;
        font-size: small;
    }

    .validation-summary-errors {
        color: red;
        font-size: small;
    }

    .required:after {
        content: "*";
        font-weight: bold;
        color: red;
    }

    #pcat_Nombre {
        text-transform: uppercase;
    }
</style>


@* CrearSubCategoria *@
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Ingresar SubCategoría</h5>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(model => model.pscat_Descripcion, new { @class = "control-label col-md-2 , required" })
                            <div class="col-md-4">
                                <input type="text" onkeypress="return soloLetras(event)" id="pscat_Descripcion"   name="pscat_Descripcion" placeholder="" class="form-control" maxlength="150" autocomplete = "off" style = "text-transform:uppercase;" />
                                <p style="color:red" id="DescripcionError">@Html.ValidationMessageFor(model => model.pscat_Descripcion)</p>
                                <div id="validationDescripcion">
                                    <p style="color:red"></p>
                                </div>
                            </div>

                            @Html.LabelFor(model => model.pscat_ISV, new { @class = "control-label col-md-3 , required" })
                            <div class="col-md-2">
                                <input type="text" id="pscat_ISV" placeholder="" class="form-control" min="1" />
                                <p style="color:red" id="ISVError">@Html.ValidationMessageFor(model => model.pscat_ISV)</p>
                                <div id="ValidationISV">
                                    <p style="color:red"></p>
                                </div>
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-primary" type="button" id="CrearSubCategoria">Añadir</button>
                            </div>
                        </div>

                        <table id="TablaSub" class="table table-striped table-responsive table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Descripción</th>
                                    <th>Impuesto sobre la Renta</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





