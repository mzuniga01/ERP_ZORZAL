@model ERP_GMEDINA.Models.tbProductoSubcategoria
@using ERP_GMEDINA.Models
<style>
    .validation-error {
        color: red;
        font-size: small;
    }

    .validation-summary-errors {
        color: red;
        font-size: small;
    }

    .required:after {
        content: "*";
        font-weight: bold;
        color: red;
    }

    #pcat_Nombre {
        text-transform: uppercase;
    }
</style>
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.pscat_Descripcion, new { @class = "control-label col-md-2 , required" })
        <div class="col-md-4">
            <input type="text" id="pscat_Descripcion" onkeypress="return soloLetras(event)" placeholder="" class="form-control" maxlength="150" autocomplete = "off" style = "text-transform:uppercase;"/>
            <div id="DescripcionError">
                <p style="color:red">
                    @Html.ValidationMessageFor(model => model.pscat_Descripcion)
                </p>
            </div>
        </div>
           @Html.LabelFor(model => model.pscat_ISV, new { @class = "control-label col-md-2 , required " })
           <div class="col-md-4">
               <input type="text" id="pscat_ISV" placeholder="" class="form-control" min="1" />
               <div id="ISVError">
                   @Html.ValidationMessageFor(model => model.pscat_ISV)
               </div>
           </div>
              <div class="col-md-2">
                  <input type="button" value="Agregar" id="AgregarSubCategorias" class="btn btn btn-primary btn-sm" />
              </div>
         

    </div>
</div>