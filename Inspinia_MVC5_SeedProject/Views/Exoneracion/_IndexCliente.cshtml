@model IEnumerable<ERP_GMEDINA.Models.tbCliente>

@{
    var test = new ERP_GMEDINA.Models.tbExoneracion();
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input id="searchCliente" type="text" class="form-control" placeholder="Ingresar Cliente" />
                            <br />
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tbCliente" class="table table table-striped  table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.clte_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.clte_Identificacion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.clte_Nombres)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody id="ClienteTbody">
                            @foreach (var item in Model)
                            {
                                if (item.clte_Id == item.clte_Id)
                                {
                                    var nameuser = (!item.clte_EsPersonaNatural) ? item.clte_NombreComercial : item.clte_Nombres + ' ' + @item.clte_Apellidos;
                                    <tr data-id="@item.clte_Id" data-rtn="@item.clte_Identificacion" data-name="@nameuser">

                                        <td>
                                            @Html.DisplayFor(modelItem => item.clte_Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.clte_Identificacion)
                                        </td>
                                        <td>
                                            @nameuser

                                        </td>
                                        <td>
                                            <button id="seleccionar" class="btn btn-primary btn-xs">Agregar</button>
                                        </td>
                                    </tr>
                                }
                                else
                                {

                                }

                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/app/Clientes-Pedido-Credito.js"></script>
<script>
    $(document).ready(function () {
        $('#tbCliente').DataTable(
        {
            "searching": false,
            "lengthChange": false,

            "oLanguage": {
                "oPaginate": {
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior",
                },
                "sEmptyTable": "No hay registros",
                "sInfoEmpty": "Mostrando 0 de 0 Entradas",
                "sSearch": "Buscar",
                "sInfo": "Mostrando _START_ a _END_ Entradas",

            }
        });
    });
</script>