@model IEnumerable<ERP_GMEDINA.Models.tbSucursal>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Sucursal</h2>
       
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Sucursal</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Registrar Sucursal", "Create", null, new { @class = "btn btn-primary btn-ms"})
					</div>
                </div>
                <div class="ibox-content">

                    <table class="table table table-striped  table-bordered" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                   Sucursal
                                </th>
                                <th>
                                    Número CAI
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.suc_Direccion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.suc_Correo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.suc_Telefono)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.suc_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbPuntoEmision.pemi_NumeroCAI)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.suc_Direccion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.suc_Correo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.suc_Telefono)
                                    </td>                                  
                                    <td>
                                        @Html.ActionLink("Detalles", "Details", new { id = item.suc_Id }, new { @class = "btn btn-primary btn-xs" })
                                        @Html.ActionLink("Editar", "Edit", new { id = item.suc_Id }, new { @class = "btn btn-white btn-xs" })
                                       
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
 </div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>




