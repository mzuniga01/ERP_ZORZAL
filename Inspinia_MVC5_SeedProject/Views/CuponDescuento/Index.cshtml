@model IEnumerable<ERP_GMEDINA.Models.tbCuponDescuento>

@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Cupón Descuento</h2>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Lista Cupón Descuento</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Registrar Cupón Descuento", "Create", null, new { @class = "btn btn-primary" })
					</div>
                </div>
                <div class="ibox-content">

<table class="table table-striped table-bordered table-hover" id="DataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.tbSucursal.suc_Descripcion)
            </th>

            <th>
                Código
                @*@Html.DisplayNameFor(model => model.cdto_ID)*@
            </th>

            <th>
                @Html.DisplayNameFor(model => model.cdto_PorcentajeDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cdto_MontoDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cdto_MaximoMontoDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cdto_Anulado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cdto_Redimido)
            </th>
            <th>Opción</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tbSucursal.suc_Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cdto_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cdto_PorcentajeDescuento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cdto_MontoDescuento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cdto_MaximoMontoDescuento)
                </td>
                @if(item.cdto_Anulado == true)
                {
                    <td>Si</td>
                }
                else
                {
                    <td>No</td>
                }
                <td>
                    @Html.DisplayFor(modelItem => item.cdto_Redimido)
                </td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.cdto_ID }, new { @class = "btn btn-primary btn-xs" })
                    @Html.ActionLink("Editar", "Edit", new { id = item.cdto_ID }, new { @class = "btn btn-white btn-xs" })
                    @Html.ActionLink("Imprimir", "",null, new {id="btnImprimir", @class = "btn btn-info btn-xs" })
                    @Html.ActionLink("Anular", "", null, new { @class = "btn btn-danger btn-xs" })
                </td>
            </tr>
        }
    </tbody>
</table>

                </div>
            </div>
        </div>
    </div>
 </div>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>
<script>
    $('#btnImprimir').click(function () {
        confirm('¿Deseas Imprimir Cupón Descuento?');
    });
</script>

