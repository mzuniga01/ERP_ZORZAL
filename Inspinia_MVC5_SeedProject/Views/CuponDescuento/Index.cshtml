@model IEnumerable<ERP_GMEDINA.Models.tbCuponDescuento>

@{
    ViewBag.Title = "Listado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Cupón Descuento</h2>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Cupón Descuento</h5>
                    <div class="ibox-tools">

                        @Html.ActionLink("Registrar Cupón Descuento", "Create", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-responsive table-bordered table-hover" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    Código
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.tbSucursal.suc_Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cdto_PorcentajeDescuento)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cdto_MaximoMontoDescuento)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cdto_MontoDescuento)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cdto_Redimido)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.cdto_Anulado)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr data-id="@item.cdto_ID"
                                    data-anulado="@item.cdto_Anulado">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cdto_ID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbSucursal.suc_Descripcion)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.cdto_PorcentajeDescuento)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cdto_MaximoMontoDescuento)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.cdto_MontoDescuento)
                                    </td>
                                    @if (item.cdto_Redimido == false)
                                    {
                                        <td>
                                            No
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            Si
                                        </td>
                                    }

                                    @if (item.cdto_Anulado == false)
                                    {
                                        <td> No</td>
                                    }
                                    else
                                    {
                                        <td>Si</td>
                                    }
                                    @if (item.cdto_Anulado == false && item.cdto_Redimido == false && item.cdto_EsImpreso == false)
                                    {
                                        <td>
                                            @Html.ActionLink("Detalles", "Details", new { id = item.cdto_ID }, new { @class = "btn btn-primary btn-xs" })
                                            @Html.ActionLink("Editar", "Edit", new { id = item.cdto_ID }, new { @id = "btnEditar", @class = "btn btn-white btn-xs" })
                                        </td>

                                    }
                                    else
                                    {
                                        <td>
                                            @Html.ActionLink("Detalles", "Details", new { id = item.cdto_ID }, new { @class = "btn btn-primary btn-xs" })

                                            @*btn no update ya esta anulado*@
                                            <span class="d-inline-block" tabindex="0" data-toggle="tooltip" title="No se puede Editar">
                                                <button class="btn btn-white btn-xs" style="pointer-events: none;" type="button" disabled>Editar</button>
                                            </span>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>
<script>
    $('#btnImprimir').click(function () {
        confirm('¿Deseas Imprimir Cupón Descuento?');
    });

    $(function () {
        $('[data-toggle="tooltip"]').tooltip()
    });
</script>
<script src="~/Scripts/app/CuponDescuentoEsImpreso.js"></script>