@model IEnumerable<ERP_GMEDINA.Models.SDP_tbEmpleado_Select_Result>
@using ERP_GMEDINA.Models

@{
    tbEmpleado empleado = new tbEmpleado();
}
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                    <div class="form-horizontal">
                        <input type="text" id="search" placeholder="Buscar Empleado" class="form-control" />

                        <table id="Table_BuscarEmpleado" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Nombres
                                    </th>
                                    <th>
                                        Apellidos
                                    </th>
                                    <th>
                                        Correo Electrónico
                                    </th>
                                    <th>
                                        Acción
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr tr data-id="@item.emp_Id" data-name="@item.emp_Nombres " data-apellidos="@item.emp_Apellidos" data-email="@item.emp_Correoelectronico">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.emp_Nombres)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.emp_Apellidos)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.emp_Correoelectronico)
                                        </td>
                                        <td>
                                            <button class="btn btn-primary btn-xs" value="@item.emp_Id" onclick="Seleccionar(@item.emp_Id)">Seleccionar</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
            </div>
        </div>
    </div>
</div>
