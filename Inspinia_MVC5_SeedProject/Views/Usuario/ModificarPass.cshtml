@model ERP_GMEDINA.Models.tbUsuario

<style>
    .validation-error {
        color: red;
        font-size: small;
    }

    .validation-summary-errors {
        color: red;
        font-size: small;
    }

    .required:after {
        content: "*";
        font-weight: bold;
        color: red;
    }
</style>

@{
    ViewBag.Title = "Modificar Contraseña";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Modificar Contraseña</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index", "Home", null, new { @class = "" })
        </div>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Modificar Contraseña</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">

        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.usu_Id)
        @Html.HiddenFor(model => model.usu_Correo)
        @Html.HiddenFor(model => model.usu_Apellidos)
        @Html.HiddenFor(model => model.usu_Nombres)
        @Html.HiddenFor(model => model.suc_Id)
        @Html.Hidden("ConfirmarPassword", (string)ViewBag.ConfirmarPassword)

        <div class="form-group">
            @Html.LabelFor(model => model.usu_NombreUsuario, new { @class = "control-label col-md-2 invisible" })
            <div class="col-md-10">
                @Html.HiddenFor(model => model.usu_NombreUsuario)
                
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 , required">Contraseña Actual</label>
            <div class="col-md-4">
               
                <input class="form-control" data-val="true"  id="txtPassword" name="txtPassword" type="password" 
                        maxlength="64" value="" onKeyPress = "return Contraseña(event)">
                <p style="color:red;">@Html.ValidationMessageFor(model => model.usu_NombreUsuario)</p>
            </div>
        </div>

        <div class="form-group">
            
            <label class="col-md-2 , required">Contraseña Nueva</label>
            <div class="col-md-4">
        
                <input class="text-box single-line" data-val="true" data-val-required="El campo Usuario es requerido" id="usu_Password" maxlength="64"
                        name="usu_Password" type="password" value="" onKeyPress = "return Contraseña(event)">
                @Html.ValidationMessageFor(model => model.usu_Password)
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-2 , required">Vuelve a escribir la contraseña nueva</label>
            <div class="col-md-4">
                <input class="form-control" data-val="true" data-val-required="El campo Usuario es requerido" id="confirmar-pass" name="confirmar" type="password" 
                       maxlength="64" value="" onKeyPress = "return Contraseña(event)">
                <label id="msg"></label><br>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar Cambios" class="btn btn-primary" id="Cambiarpass" />
                @Html.ActionLink("Cancelar", "Index", new { id = ViewBag.UserID}, new { @class = "btn btn-white" })
            </div>
        </div>
    </div>
}


                </div>
            </div>
        </div>
    </div>
 </div>



    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/app/Comparar.js"></script>

