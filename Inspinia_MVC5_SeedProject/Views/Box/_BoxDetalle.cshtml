@model ERP_GMEDINA.Models.tbSalidaDetalle
@using ERP_GMEDINA.Models


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Llenar Caja</h5>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">
                  
                        <div class="form-group">
                            @Html.LabelFor(model => model.prod_Codigo, "Producto", new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                <input type="text" id="prod_Codigo" placeholder="" class="form-control" readonly />
                                <div id="validationcodigoproducto">
                                    @Html.ValidationMessageFor(model => model.prod_Codigo)
                                </div>
                            </div>
                            <div class="col-md-1">
                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalAgregarProducto"><span class="glyphicon glyphicon-search"></span></button>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.tbProducto.prod_Descripcion, "Descripcion", new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                <input type="text" id="prod_Descripcion" placeholder="" class="form-control" readonly />
                                @Html.ValidationMessageFor(model => model.tbProducto.prod_Descripcion)
                            </div>
                            @Html.LabelFor(model => model.tbProducto.pscat_Id, "Subcategoria", new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                <input type="text" id="pscat_Id" placeholder="" class="form-control" readonly />
                                @Html.ValidationMessageFor(model => model.tbProducto.pscat_Id)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.sald_Cantidad, "Cantidad", new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                <input type="text" id="sald_Cantidad" placeholder="" class="form-control"/>
                                <div id="validationcantidad">
                                    @Html.ValidationMessageFor(model => model.sald_Cantidad)
                                </div>
                                </div>
                            </div>
                        </div>
                        

                        <div class="form-group col-md-1">
                            <button class="btn btn-primary" type="button" id="AgregarDetalleSalida">Registrar</button>
                        </div>

                        <table id="tbSalidaDetalle" class="table table-responsive">
                            <thead>
                                <tr>
                                    <th>Codigo</th>
                                    <th>Producto</th>
                                    <th>Unidad Medida</th>
                                    <th>Cantidad</th>
                                    <th>Eliminar</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


<div class="modal fade" id="ModalAgregarProducto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Buscar Productos</h4>
            </div>
            <div class="modal-body" id="frmEditarMunicipios">
                @Html.Partial("_Producto", (List<tbProducto>)ViewBag.Producto)
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

