@model ERP_GMEDINA.Models.tbObjeto

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .validation-error {
        color: red;
        font-size: small;
    }
      .required:after {
         content: "*";
         font-weight: bold;
         color: red; }
    .validation-summary-errors
     {
        color: red;
        font-size: small;
                        }
   #obj_Pantalla {
        text-transform: uppercase;
    }
</style>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Objeto</h2>
       
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Objeto</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)

                        @*<div class="form-group">
                            @Html.LabelFor(model => model.obj_Id, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.obj_Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.obj_Id)
                            </div>
                        </div>*@

                        <div class="form-group">
                            @Html.LabelFor(model => model.obj_Pantalla, new { @class = "control-label col-md-2 , required " })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.obj_Pantalla, new { htmlAttributes = new { @onkeypress = "return soloLetras1(event)", @maxlength = "50", @autocomplete = "off" } })
                                <p style="color:red"> @Html.ValidationMessageFor(model => model.obj_Pantalla)</p>
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.obj_Referencia, new { @class = "control-label col-md-2 , required " })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.obj_Referencia, new { htmlAttributes = new { @onkeypress = "return soloLetras(event)", @placeholder="Ejemplo: Controlador/metodo" , @maxlength = "100", @autocomplete = "off" } })
                                <p style="color:red"> @Html.ValidationMessageFor(model => model.obj_Referencia)</p>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-primary" id="btnGuardar" />
                                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                            </div>
                        </div>
                    </div>
                       
                    }

                </div>
            </div>
        </div>
    </div>
 </div>

 
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/app/Objeto.js"></script>
<script>
    $("#obj_Pantalla").focus();
   
    $("#obj_Pantalla").change(function () {
        var str = $("#obj_Pantalla").val();
        var res = str.toUpperCase();
        $("#obj_Pantalla").val(res);


    });

    $("#obj_Referencia").keypress(function (e) {

        if (e.which == 13) {

            // Acciones a realizar, por ej: enviar formulario.

            $('#btnGuardar').click();

        }

    });
</script>