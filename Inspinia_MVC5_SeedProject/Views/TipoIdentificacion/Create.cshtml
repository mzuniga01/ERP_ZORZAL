@model ERP_GMEDINA.Models.tbTipoIdentificacion

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .AsteriscoRojo:after {
        content: "*";
        color: red;
    }
</style>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2> Tipos de Identificación</h2>

    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Index","TipoIdentificacion")">Regresar</a>
        </div>
    </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Tipo de Identificación</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <label class="control-label col-md-2 AsteriscoRojo">Descripción</label>
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.tpi_Descripcion, new { htmlAttributes = new { @class = "form-control", @style = "text-transform:uppercase;" } })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.tpi_Descripcion)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

<script>
    //---------------------------------Ctrl + G (GuardarRegistro)------------------------------
    $(document).keydown(function (e) {
        if ((e.key == 'g' || e.key == 'G') && (e.ctrlKey || e.metaKey)) {
            e.preventDefault();
            $("form").submit();
            return false;
        }
        return true;
    });


    $(document).ready(function () {


        //VALIDAR SOLO LETRAS
        $('#tpi_Descripcion').on('input', function (e) {
            if (!/^[ a-z-áéíóúüñ]*$/i.test(this.value)) {
                this.value = this.value.replace(/[^ a-z-áéíóúüñ]+/ig, "");
            }
        });
        $('#tpi_Descripcion').on('input', function (e) {
            if (!/^[ a-z-áéíóúüñ]*$/i.test(this.value)) {
                this.value = this.value.replace(/[^ a-z-áéíóúüñ]+/ig, "");
            }
        });


    });
</script>

}
