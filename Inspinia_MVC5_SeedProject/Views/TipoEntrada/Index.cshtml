@model IEnumerable<ERP_ZORZAL.Models.tbTipoEntrada>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Tipos De Entradas</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Nuevo", "Crear", null, new { @class = "btn btn-primary btn-xs" })
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-hover table-bordered" id="TiposEntrada">
                        <thead>
                            <tr>
                                <th>
                                    Entrada Id
                                </th>
                                <th>
                                    Nombre Tipo Entrada
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>

                            <tr>
                                <td>
                                    1
                                </td>
                                <td>
                                    Entrada Por Devolucion
                                </td>
                                <td>
                                    @*<input type="button" class="btn btn-primary btn-xs" data-dismiss="modal"  id="btnCerrar" value="Detalles" data-toggle="modal" data-target="#Detalles" />
                                    <input type="button" class="btn btn-white btn-xs" data-dismiss="modal" id="btnCerrar" value="Editar" data-toggle="modal" data-target="#Editar" />*@
                                    @Html.ActionLink("Detalles", "Detalles", null, new { @class = "btn btn-primary btn-xs" })
                                    @Html.ActionLink("Editar", "Editar", null, new { @class = "btn btn-white btn-xs" })
                                    
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    2
                                </td>
                                <td>
                                    Entrada Por Traslado
                                </td>
                                <td>
                                    @Html.ActionLink("Detalles", "Detalles", null, new { @class = "btn btn-primary btn-xs" })
                                    @Html.ActionLink("Editar", "Editar", null, new { @class = "btn btn-white btn-xs" })
                                    
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    3
                                </td>
                                <td>
                                    Entrada Por Compra
                                </td>
                                <td>
                                    @Html.ActionLink("Detalles", "Detalles", null, new { @class = "btn btn-primary btn-xs" })
                                    @Html.ActionLink("Editar", "Editar", null, new { @class = "btn btn-white btn-xs" })
                                    
                                </td>
                            </tr>
                        </tbody>
                    </table>



                    <!-- Editar MODAL -->
                    <div class="modal fade" id="Editar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel"><label id="LblSearchByDescription">Editar</label></h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <div class="col-12">

                                            <div class="form-group row">
                                                <label style="margin-left:15px" class="col-sm-4 col-form-label" id="LblDescription1">Nombre Tipo Entrada</label>
                                                <div class="col-sm-7  input-group">
                                                    <input type="text" class="text-box single-line" value="Entrada Por Traslado" />
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <input type="button" class="btn btn-white btn-xs" data-dismiss="modal" style="width:110px;" id="btnCerrar" value="Cerrar" />
                                    <input type="button" class="btn btn-primary" data-dismiss="modal" style="width:110px;" id="btnCerrar" value="Aceptar" />
                                </div>
                            </div>
                        </div>
                    </div>


                    <!-- Detalles MODAL -->
                    <div class="modal fade" id="Detalles" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="exampleModalLabel"><label id="LblSearchByDescription">Detalles</label></h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    <div class="row">
                                        <dl class="dl-horizontal">

                                            <dt>
                                                Id Entrada
                                            </dt>

                                            <dd>
                                                1
                                            </dd>

                                            <dt>
                                                Nombre Tipo Entrada
                                            </dt>

                                            <dd>
                                                Entrada Por Traslado
                                            </dd>
                                        </dl>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <input type="button" class="btn btn-white btn-xs" data-dismiss="modal" style="width:110px;" id="btnCerrar" value="Cerrar" />
                                    <input type="button" class="btn btn-primary" data-dismiss="modal" style="width:110px;" id="btnCerrar" value="Aceptar" />
                                </div>
                            </div>
                        </div>
                    </div>





















                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#TiposEntrada').DataTable(
            {
                "searching": true,

                "oLanguage": {
                    "oPaginate": {
                        "sNext": "Siguiente",
                        "sPrevious": "Anterior",
                    },
                    "sSearch": "Buscar",
                    "sLengthMenu": "Mostrar _MENU_ registros por página",
                    "sInfo": "Mostrando _START_ a _END_ Entradas",
                }
            });
    });
</script>


