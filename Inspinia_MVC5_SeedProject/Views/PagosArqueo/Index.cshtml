@model IEnumerable<ERP_GMEDINA.Models.tbPagosArqueo>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Pagos Arqueo</h2>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado Pagos Arqueo</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Registrar Pagos Arqueo", "Create", null, new { @class = "btn btn-primary"})
					</div>
                </div>
                <div class="ibox-content">

<table class="table table-striped table-responsive table-bordered table-hover" id="DataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.arqpg_Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.tbMovimientoCaja.mocja_Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.tbTipoPago.tpa_Descripcion)
            </th>

            <th>Acciones</th>
        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.arqpg_Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.tbMovimientoCaja.mocja_Id)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.tbTipoPago.tpa_Descripcion)
                </td>

                <td>
                    @Html.ActionLink("Detalle", "Details", new { id = item.arqpg_Id }, new { @class = "btn btn-primary btn-xs" })
                    @Html.ActionLink("Editar", "Edit", new { id = item.arqpg_Id }, new { @class = "btn btn-white btn-xs" })
                </td>
            </tr>
        }
    </tbody>


</table>

                </div>
            </div>
        </div>
    </div>
 </div>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/app/PagosArqueo.js"></script>
