@model ERP_GMEDINA.Models.tbDepartamento

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style type="text/css">
    #dep_Nombre, #mun_Nombre {
          text-transform: uppercase;
        }
</style>
<style>
    .validation-error {
        color: red;
        font-size: small;
    }

    .validation-summary-errors {
        color: red;
        font-size: small;
    }
</style>

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Departamento</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
			@Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Departamento</h5>
                </div>
                <div class="ibox-content">


    
    <div class="form-horizontal">
      @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.dep_Codigo, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.dep_Codigo)
                <p style="color:red"> @Html.ValidationMessageFor(model => model.dep_Codigo)</p>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.dep_Nombre, new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.dep_Nombre)
                <p style="color:red">@Html.ValidationMessageFor(model => model.dep_Nombre)</p>
            </div>
        </div>
        
    </div>
     
       </div>
      </div>

            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Agregar Municipios</h5>
                </div>
                <div class="ibox-content">
                    <div class="form-horizontal">

                        @Html.Partial("_CreateMunicipio", new ERP_GMEDINA.Models.tbMunicipio())

                        <div class="form-group">
                            <div class="col-md-12 text-center">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                            </div> 
                        </div>
                    </div>
                </div>
            </div>


    </div>
  </div>
</div>
}
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="~/Scripts/app/AgregarMunicipio.js"></script>
<script src="~/Scripts/app/letras.js"></script>
<script src="~/Scripts/app/CrearActualizarEliminar.js"></script>

@section Scripts {
@Scripts.Render("~/bundles/jqueryval")
}
<script type="text/javascript">
jQuery('input,select').each(function() {
    var req = jQuery(this).attr('data-val-required');
     var label = jQuery('label[for="' + jQuery(this).attr('id') + '"]');
     var text = label.text();
     if (text.length > 0) {
      label.append('<span style="color:red"> *</span>');
    }
});
</script>