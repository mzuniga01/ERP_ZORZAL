                    <div class="ibox-content">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                               

                                <div class="form-group">
                                    @Html.LabelFor(model => model.tsal_Descripcion, new { @class = "control-label col-md-2" })
