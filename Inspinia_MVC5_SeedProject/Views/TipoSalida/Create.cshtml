                                        <p style="color:red">@Html.ValidationMessageFor(model => model.tsal_Descripcion)</p>

                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Guardar" class="btn btn-primary" id="btnTipoSalida"/>
                                        @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                    </div>
                                </div>
                            </div>
                        }

                    </div>

                </div>
               
            </div>
        </div>
    </div>
<script>
    //Validar Los campos Stringg
    function soloLetras(e) {
        tecla = (document.all) ? e.keyCode : e.which;
        tecla = String.fromCharCode(tecla)
        return /^[a-zA-ZáéíóúñÁÉÍÓÚÑ ]+$/.test(tecla);
    }
    ////Limpiar campo de campos copiados y no permitidos por el campo de nombre
    function limpia() {
        var val = document.getElementById("miInput").value;
        var tam = val.length;
        for (i = 0; i < tam; i++) {
            if (!isNaN(val[i]))
                document.getElementById("miInput").value = '';
        }
    }
    ///validar not copy paste///
    window.onload =
        function () {
        var myInput = document.getElementById('miInput');
        myInput.onpaste = function (e) {
            e.preventDefault();
            //alert("esta acción está prohibida");
        }

        myInput.oncopy = function (e) {
