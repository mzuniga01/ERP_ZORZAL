@model ERP_GMEDINA.Models.tbCuentasBanco

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .myInput {
        border-style: none;
    }

        .myInput:hover {
            border-style: none;
        }

        .myInput:focus {
            border-style: none;
        }
    .single-line{
        padding:0;
    }
</style>

<link href="~/Content/css/Auditoria.css" rel="stylesheet" />
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Cuentas Bancarias</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Index", "CuentaBanco")">Regresar</a>
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Detalles Cuenta Bancaria</h5>
                </div>
                <div class="ibox-content">


                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.bcta_Id)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.bcta_Id)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.tbBanco.ban_Nombre)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tbBanco.ban_Nombre)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.bcta_TipoCuenta)
                        </dt>


                        @if (Model.bcta_TipoCuenta == 1)
                        {
                            <dd>Ahorro</dd>
                        }
                        else
                        {
                            <dd>Cheques</dd>
                        }


                        <dt>
                            @Html.DisplayNameFor(model => model.bcta_Numero)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.bcta_Numero)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.mnda_Id)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tbMoneda.mnda_Nombre)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.bcta_TotalCredito)
                        </dt>

                       
                            <dd>
                                @Html.EditorFor(model => model.bcta_TotalCredito, new { htmlAttributes = new { @readonly = "readonly" } })
                            </dd>
                      

                            <dt>
                                @Html.DisplayNameFor(model => model.bcta_TotalDebito)
                            </dt>


                            <dd>
                                @Html.EditorFor(model => model.bcta_TotalDebito, new { htmlAttributes = new { @readonly = "readonly" } })
                            </dd>


                            <dt>
                                <label>Saldo Actual</label>
                            </dt>
                            <dd>
                                <input id="SaldoActual" type="text" class="myInput" readonly />
                            </dd>


                            <dt>
                                @Html.DisplayNameFor(model => model.bcta_FechaApertura)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.bcta_FechaApertura, "{0:dd-MM-yyyy}", new { htmlAttributes = new { @id = "fechaapertura" } })
                            </dd>
</dl>


                    @Html.ActionLink("Editar", "Edit", new { id = Model.bcta_Id }, new { @class = "btn btn-primary" })
                </div>
            </div>

            <div class="ibox-content">
                <table class="table table-striped">
                    <tr>
                        <th>Acción</th>
                        <th>Usuario</th>
                        <th>Fecha</th>
                    </tr>
                    <tr>
                        <td>Creado</td>
                        <td>
                            @Html.DisplayFor(model => model.tbUsuario.usu_Nombres)
                            @Html.DisplayFor(model => model.tbUsuario.usu_Apellidos)
                        </td>
                        <td>@Html.DisplayFor(model => model.bcta_FechaCrea)</td>
                    </tr>
                    <tr>
                        <td>Modificado</td>
                        <td>
                            @Html.DisplayFor(model => model.tbUsuario1.usu_Nombres)
                            @Html.DisplayFor(model => model.tbUsuario1.usu_Apellidos)
                        </td>
                        <td>@Html.DisplayFor(model => model.bcta_FechaModifica)</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/FuncionResta.js"></script>
<script>
    $(document).ready(function () {
        $("#bcta_TotalDebito").css("border", "none");
        $("#bcta_TotalCredito").css("border", "none");
    });
</script>













