@model ERP_GMEDINA.Models.tbCuentasBanco

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Cuentas Bancarias</h2>

    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Index", "CuentaBanco")">Regresar</a>
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Cuenta Bancaria  </h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <p style="color:red">@Html.ValidationSummary(true)</p>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ban_Id, "Banco", new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.DropDownList("ban_Id", null, "Seleccione Banco", new { @class = "form-control" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.ban_Id)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.bcta_Numero, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.bcta_Numero, new { htmlAttributes = new { @autocomplete = "off", maxlength = 50, @style = "text-transform:uppercase;", @onkeyup = "this.value=Copy(this.value)",  @onkeypress = "return validar(event)" } })
                                    <p style="color:red"> @Html.ValidationMessageFor(model => model.bcta_Numero)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.mnda_Id, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.DropDownList("mnda_Id", null, "Seleccione Moneda", new { @class = "form-control" })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.mnda_Id)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.bcta_TipoCuenta, "Tipo Cuenta", htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    <select class="form-control" id="bcta_TipoCuenta" name="bcta_TipoCuenta">
                                        <option value="" selected disabled>Seleccione Tipo Cuenta</option>
                                        <option value="1">AHORRO</option>
                                        <option value="0">CHEQUES</option>
                                    </select>
                                    @Html.ValidationMessageFor(model => model.bcta_TipoCuenta, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.bcta_TotalCredito, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.bcta_TotalCredito, new { htmlAttributes = new { @autocomplete = "off", @class = "form-control", @value = "value" } })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.bcta_TotalCredito)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.bcta_TotalDebito, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.bcta_TotalDebito, new { htmlAttributes = new { @autocomplete = "off",@class = "form-control", @value = "value" } })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.bcta_TotalDebito)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.bcta_FechaApertura, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.bcta_FechaApertura, "{0:mm-dd-yyyy}", new { @autocomplete = "off", htmlAttributes = new { maxlength = 10 } })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.bcta_FechaApertura)</p>
                                </div>
                            </div>



                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
  

////Asterisco

    jQuery('input,select').each(function () {
        var req = jQuery(this).attr('data-val-required');
        var label = jQuery('label[for="' + jQuery(this).attr('id') + '"]');
        var text = label.text();
        if (text.length > 0) {
            label.append('<span style="color:red"> *</span>');
        }
    });




        //Número CAI
        function validar(e) {
            tecla = (document.all) ? e.keyCode : e.which;
            tecla = String.fromCharCode(tecla)
            return /^[a-z0-9A-Z\-]+$/.test(tecla);
        }
    </script>
}
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/app/Datepicker.js"></script>
<script src="~/Scripts/app/CuentaBanco.js"></script>
<script src="~/Scripts/app/ComandoGuardar.js"></script>















