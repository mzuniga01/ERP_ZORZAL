@model ERP_GMEDINA.Models.tbInventarioFisicoDetalle
@using ERP_GMEDINA.Models

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Inventario Fisico Detalle</h5>
                </div>
                <div class="ibox-content">
    <div class="form-horizontal">
 

        <div class="form-group" hidden="hidden">
            @Html.LabelFor(model => model.prod_Codigo, "Producto", new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                <input type="text" id="prod_Codigo" placeholder="" class="form-control" />
                <div id="validationproducto">
                    @Html.ValidationMessageFor(model => model.prod_Codigo)
                </div>
                </div>
             </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tbProducto.prod_CodigoBarras, "Producto", new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                <input type="text" id="prod_CodigoBarras" placeholder="" class="form-control" />
                <div id="validationproducto">
                    @Html.ValidationMessageFor(model => model.tbProducto.prod_CodigoBarras)
                </div>
            </div>
            <div class="col-md-1">
                <button type="button" id="productos" class="btn btn-primary" data-toggle="modal" data-target="#modalproductos"><span class="glyphicon glyphicon-search"></span></button>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tbProducto.prod_Descripcion, "Descripcion del Producto", new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                <input type="text" id="prod_Descripcion" placeholder="" class="form-control" readonly />
                <div id="validationproducto">
                    @Html.ValidationMessageFor(model => model.tbProducto.prod_Descripcion)
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.tbProducto.uni_Id, "Unidad de Medida", new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                <input type="text" id="uni_Id" placeholder="" class="form-control"  readonly />
                <input type="text" id="uni_Ids" placeholder="" style="visibility:hidden"  readonly />
                 <div id="validationUnidadMedida">
                    @Html.ValidationMessageFor(model => model.tbProducto.uni_Id)
                </div> 
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.invfd_CantidadSistema, new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                <input type="text" id="invfd_CantidadSistema" placeholder="" class="form-control"  readonly/>
                <div id="validationCantidadSistema">
                    @Html.ValidationMessageFor(model => model.invfd_CantidadSistema)
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.invfd_Cantidad, new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                <input type="text" value="1" id="invfd_Cantidad" placeholder="" class="form-control" onkeypress="return justNumbers(event);"/>
                <div id="validationCantidadFisica">
                    @Html.ValidationMessageFor(model => model.invfd_Cantidad)
                </div>
            </div>

            <div class="col-md-offset-10">
                <input type="button" value="Agregar" id="AgregarNuevoDetalle" class="btn btn-sm btn-primary" />
            </div>

        </div>


    </div>

                </div>
            </div>
        </div>
    </div>
 </div>

<!-- Modal Productos -->
<div>
    <div class="modal fade" id="modalproductos" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">Buscar Producto</h4>
                </div>
                <div class="modal-body" id="frmAgregarCasoExito">
                    <div class="ibox-content">
                        <input type="text" id="buscar" placeholder="Buscar Producto" class="form-control" />
                        <table class="table table-striped" id="BuscarProducto">
                            <tr>
                                <th>
                                    Descripcion del Producto
                                </th>
                                <th>
                                    Marca
                                </th>
                                <th>
                                    Codigo de Barras
                                </th>
                                <th>
                                    Modelo
                                </th>
                                <th>
                                    Unidad de Medida
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>

                        </table>

                    </div>
                    <div class="form-group">
                        <div class="col-md-12 text-center">
                            <button type="button" class="btn btn-white" data-dismiss="modal" aria-label="Close">Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/Scripts/jquery-3.1.1.min.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}