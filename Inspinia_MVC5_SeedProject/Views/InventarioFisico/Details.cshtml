@model ERP_GMEDINA.Models.tbInventarioFisico
@using ERP_GMEDINA.Models

@{
    ViewBag.Title = "Detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Inventario Fisico</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox float-e-margins">
                    <div class="ibox-title">
                        <h5>Detalle inventario Fisico</h5>
                    </div>
                    <div class="ibox-content">


                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.invf_FechaInventario)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.invf_FechaInventario)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.bod_Id)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.tbBodega.bod_Nombre)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.invf_ResponsableBodega)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.invf_ResponsableBodega)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.invf_Descripcion)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.invf_Descripcion)
                            </dd>

                            <dt>
                                @Html.DisplayNameFor(model => model.estif_Id)
                            </dt>

                            <dd>
                                @Html.DisplayFor(model => model.tbEstadoInventarioFisico.estif_Descripcion)
                            </dd>
                            <dd>
                                @Html.HiddenFor(model => model.estif_Id)
                            </dd>
                        </dl>

                        @Html.ActionLink("Editar", "Edit", new { id = Model.invf_Id }, new { @class = "btn btn-primary" })


                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-md-12" id="IndexDetalle">
                                        @Html.Partial("_ListadoInventarioFisicoDetalle", Model.tbInventarioFisicoDetalle, new ViewDataDictionary { { "invf_Id", Model.invf_Id } })
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-md-12" id="IndexDetalleConciliado">
                                        @Html.Partial("_ListadoInventarioFisicoDetalleConciliado", Model.tbInventarioFisicoDetalle, new ViewDataDictionary { { "invf_Id", Model.invf_Id } })
                                    </div>
                                </div>
                            </div>
                        </div>


                        @* Tabla de los datos de auditoria *@
                        <div class="ibox-content">
                        <table class="table table-striped">
                            <tr>
                                <th>
                                    Acción
                                </th>
                                <th>
                                    Usuario
                                </th>
                                <th>
                                    Fecha
                                </th>
                            </tr>

                            <tr>
                                <td>
                                    Creado
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.tbUsuario1.usu_Nombres)
                                    @Html.DisplayFor(model => model.tbUsuario1.usu_Apellidos)
                                </td>
                                <td>

                                    @Html.DisplayFor(model => model.invf_FechaCrea)
                                </td>
                                
                            </tr>
                            <tr>
                                <td>
                                    Modificado
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.tbUsuario.usu_Nombres)
                                    @Html.DisplayFor(model => model.tbUsuario.usu_Apellidos)
                                </td>
                                <td>
                                    @Html.DisplayFor(model => model.invf_FechaModifica)
                                </td>
                              
                            </tr>

                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script>
    window.onload = function () {
        var valorid = $('#estif_Id').val();
        if (valorid == 1) {
                document.getElementById("IndexDetalle").style.display = 'display';
                document.getElementById("IndexDetalleConciliado").style.display = 'none';
            }
            else
            {
                document.getElementById("IndexDetalle").style.display = 'none';
                document.getElementById("IndexDetalleConciliado").style.display = 'display';

            }

    };

</script>

