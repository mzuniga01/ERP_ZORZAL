@model ERP_GMEDINA.Models.tbInventarioFisicoDetalle
@using ERP_GMEDINA.Models

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Inventario Fisico Detalle</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)


        <div class="form-group">
            @Html.LabelFor(model => model.prod_Codigo, "Producto", new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.prod_Codigo)
                <div id="validationproducto">
                    @Html.ValidationMessageFor(model => model.prod_Codigo)
                </div>
                </div>
                <div class="col-md-1">
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalproductos"><span class="glyphicon glyphicon-search"></span></button>
                </div>
             </div>

        <div class="form-group">
            @Html.LabelFor(model => model.uni_Id, "Unidad de Medida", new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.DropDownList("uni_Id", (IEnumerable<SelectListItem>)ViewBag.uni_Id,"Seleccione", new { @class = "form-control" })
                <div id="validationUnidadMedida">
                    @Html.ValidationMessageFor(model => model.uni_Id)
                </div> 
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.invfd_Cantidad, new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.invfd_Cantidad)
                <div id="validationCantidadFisica">
                    @Html.ValidationMessageFor(model => model.invfd_Cantidad)
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.invfd_CantidadSistema, new { @class = "control-label col-md-2" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.invfd_CantidadSistema)
                <div id="validationCantidadSistema">
                    @Html.ValidationMessageFor(model => model.invfd_CantidadSistema)
                </div>
            </div>
        </div>

    </div>
}

                    @* Tabla del detalle *@
                    <div class="form-group col-md-1">
                        <button class="btn btn-primary" type="button" id="AgregarInvFisicoDetalle">Añadir</button>
                    </div>
                    <table class="table table-responsive" style="width:100%" id="detalle">
                        <thead>
                            <tr>
                                <th>
                                    Producto
                                </th>
                                <th>
                                    Unidad de Medida
                                </th>
                                <th>
                                    Cantidad
                                </th>
                                <th>
                                    Cantidad de Sistema
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
 </div>

 

