                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbEstadoInventarioFisico.estif_Descripcion)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Detalle", "Details", new { id = item.invf_Id }, new { @class = "btn btn-primary btn-xs" })
                                        @Html.ActionLink("Editar", "Edit", new { id = item.invf_Id }, new { @class = "btn btn-white btn-xs" })
                                    </td>
                                </tr>
