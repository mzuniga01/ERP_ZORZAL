@model IEnumerable<ERP_GMEDINA.Models.tbInventarioFisico>

@{
    ViewBag.Title = "Inventario Fisico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Inventario Fisico</h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Inventario Fisico</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Levantar Inventario Fisico", "Create", null, new { @class = "btn btn-primary"})
                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-responsive table-bordered table-hover" style="width:100%" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.invf_FechaInventario)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.bod_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.invf_ResponsableBodega)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.estif_Id)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                      <td>
                                        @Html.DisplayFor(modelItem => item.invf_FechaInventario)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbBodega.bod_Nombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.invf_ResponsableBodega)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbEstadoInventarioFisico.estif_Descripcion)
                                    </td>
                                    <td>
                                        @Html.ActionLink("Detalles", "Details", new { id = item.invf_Id }, new { @class = "btn btn-primary btn-xs" })
                                        @Html.ActionLink("Editar", "Edit", new { id = item.invf_Id }, new { @class = "btn btn-white btn-xs" })
                                    </td>
                                </tr>
                            }
                         </tbody>
                     </table>

                </div>
            </div>
        </div>
    </div>
 </div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
        $('#DataTable').DataTable({

        "searching": true,
        "oLanguage": {
            "oPaginate": {
                "sNext": "Siguiente",
                "sPrevious": "Anterior",
            },
            "sProcessing": "Procesando...",
            "sLengthMenu": "Mostrar _MENU_ registros",
            "sZeroRecords": "No se encontraron resultados",
            "sEmptyTable": "Ningún dato disponible en esta tabla",
            "sEmptyTable": "No hay registros",
            "sInfoEmpty": "Mostrando 0 de 0 Entradas",
            "sSearch": "Buscar",
            "sInfo": "Mostrando _START_ a _END_ Entradas",
            "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",

        },

    });
    });
</script>
