@model IEnumerable<ERP_GMEDINA.Models.UDV_Vent_SolicituEfectivo_Index>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Solicitudes de Efectivo</h5>                  
                    <div class="ibox-tools">                        
                        @*@using (Html.BeginForm("ReporteGeneral", "SolicitudEfectivo", FormMethod.Post, new { enctype = "multipart/form-data" , target = "_blank" }))
                        {

                            <button id="buscar" type="submit" class="btn btn-primary btn-sm">Repor teGeneral</button>
                        }
                        @using (Html.BeginForm("ReporteCajaCajero", "SolicitudEfectivo", FormMethod.Post, new { enctype = "multipart/form-data", target = "_blank" }))
                        {

                            <button id="buscar" type="submit" class="btn btn-primary btn-sm">Caja Cajero</button>
                        }*@
                        
                        @Html.ActionLink("Registrar Solicitud Efectivo", "Create", null, new { @class = "btn btn-primary btn-primary" })
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="table table-responsive">
                        <table class="table table-striped table-bordered" id="SolicitudEfectivo">
                            <thead>
                                <tr>
                                    <th>                                       
                                        ID Solicitud
                                    </th>
                                    <th>
                                        Fecha Solicitud
                                    </th>
                                    <th>
                                        Sucursal
                                    </th>
                                    <th>
                                        Caja
                                    </th>
                                    <th>
                                        Moneda
                                    </th>
                                    <th>
                                        Monto Solicitado
                                    </th>
                                    <th>
                                        Monto Entregado
                                    </th>                                    
                                    <th>
                                        Acciones
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.IdSolicitud)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.FechaSolicitud)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Sucursal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Caja)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Moneda)
                                        </td>
                                         
                                        @{ if (Convert.ToString(item.MontoSolicitado) == "")
                                            {
                                                <td>
                                                    0.00
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.MontoSolicitado)
                                                </td>
                                            }
                                        }
                                        @{ if (Convert.ToString(item.MontoEntregado) == "")
                                            {
                                                <td>
                                                    0.00
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.MontoEntregado)
                                                </td>
                                            }
                                        }
                                       
                                       
                                        @if (Convert.ToString(item.MontoSolicitado) == "")
                                            {
                                                <td>
                                                    @Html.ActionLink("Detalle", "Details", new { id = item.IdSolicitud }, new { @class = "btn btn-primary btn-xs" })
                                                    @Html.ActionLink("Editar", "Edit", new { id = item.IdSolicitud }, new { @class = "btn btn-white btn-xs" })
                                                </td>
                                        }
                                        else if (item.Impresa == true)
                                        {
                                            <td>
                                                @Html.ActionLink("Detalle", "Details", new { id = item.IdSolicitud }, new { @class = "btn btn-primary btn-xs" })
                                              
                                            </td>
                                        }
                                        else if (item.MontoEntregado == 0)
                                        {
                                                <td>
                                                    @Html.ActionLink("Detalle", "Details", new { id = item.IdSolicitud }, new { @class = "btn btn-primary btn-xs" })
                                                    @Html.ActionLink("Editar", "Edit", new { id = item.IdSolicitud }, new { @class = "btn btn-white btn-xs" })                                                 
                                                </td>
                                            }

                                            else if (item.MontoEntregado > 0)
                                            {
                                                <td>
                                                    @Html.ActionLink("Detalle", "Details", new { id = item.IdSolicitud }, new { @class = "btn btn-primary btn-xs" })
                                                    @Html.ActionLink("Imprimir", "ExportReport", new { id = item.IdSolicitud }, new { @class = "btn btn-primary btn-xs", target = "_blank" })
                                                </td>
                                            }
                                            else
                                            {
                                                <td>
                                                    @Html.ActionLink("Detalle", "Details", new { id = item.IdSolicitud }, new { @class = "btn btn-primary btn-xs" })                                                   
                                                </td>
                                            }
                                        
                                    </tr>
                                   }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/SolicitudEfectivo.js"></script>

