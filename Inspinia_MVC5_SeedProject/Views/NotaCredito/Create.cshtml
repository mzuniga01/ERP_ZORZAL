    <script>
        //VALIDAR SOLO LETRAS
        $('#nocre_MotivoEmision').on('input', function (e) {
            if (!/^[0-9 .a-z-áéíóúüñ]*$/i.test(this.value)) {
                this.value = this.value.replace(/[^ a-z-áéíóúüñ]+/ig, "");
