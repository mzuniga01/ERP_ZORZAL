@model IEnumerable<ERP_GMEDINA.Models.tbCliente>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input id="searchClientes" type="text" class="form-control" placeholder="Buscar Cliente..." />
                            <br />
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    <table id="tbClientes" class="table table table-striped  table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.clte_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.clte_Identificacion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.clte_Nombres)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                if (item.clte_Id == 1)
                                {
                                }
                                else
                                {
                                    var name = (!item.clte_EsPersonaNatural) ? item.clte_NombreComercial : item.clte_Nombres + ' ' + @item.clte_Apellidos;
                                    <tr data-clte="@item.clte_Id"
                                        data-id="@item.clte_Identificacion"
                                        data-nombre="@name">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.clte_Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.clte_Identificacion)
                                        </td>
                                        <td>
                                            @name
                                        </td>
                                        <td>
                                            <button id="seleccionar" class="btn btn-primary btn-xs">Agregar</button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.js"></script>
<script>
    $(document).ready(function () {
        $('#tbClientes').DataTable(
        {
            "searching": false,
            "lengthChange": false,

            "oLanguage": {
                "oPaginate": {
                    "sNext": "Siguiente",
                    "sPrevious": "Anterior",
                },
                "sEmptyTable": "No hay registros",
                "sInfoEmpty": "Mostrando 0 de 0 Entradas",
                "sSearch": "Buscar",
                "sInfo": "Mostrando _START_ a _END_ Entradas",

            }
        });
    });

    $(document).ready(function () {
        var $rows = $('#tbClientes tr');
        $("#searchClientes").keyup(function () {
            var val = $.trim($(this).val()).replace(/ +/g, ' ').toLowerCase();

            $rows.show().filter(function () {
                var text = $(this).text().replace(/\s+/g, ' ').toLowerCase();
                return !~text.indexOf(val);
            }).hide();
        })
    });

    $(document).on("click", "#tbClientes tbody tr td button#seleccionar", function () {
        clteItem = $(this).closest('tr').data('clte');
        idItem = $(this).closest('tr').data('id');
        nombreItem = $(this).closest('tr').data('nombre');

        $("#clte_Id").val(clteItem);
        $("#tbCliente_clte_Identificacion").val(idItem);
        $("#tbCliente_clte_Nombres").val(nombreItem);
        $('#ModalAgregarCliente').modal('hide');
        $("#tbCliente_clte_Nombres").val(nombreItem)
        $("#tbCliente_clte_NombreComercial").val(nombreItem);
    });
</script>