@model ERP_GMEDINA.Models.tbBodegaDetalle

@using ERP_GMEDINA.Models


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                @*<div class="ibox-title">
                    <h5>Registrar Detalle Bodega</h5>
                </div>*@
                @*<div class="ibox-content">*@
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-2">Codigo De Barras<span style="color:red">*</span></label>
                        <div class="col-md-4">
                            <input type="text" id="prod_CodigoBarras" placeholder="" class="form-control" />
                            <div id="ErrorBarras_Create">
                                @Html.ValidationMessageFor(model => model.tbProducto.prod_CodigoBarras)
                            </div>
                        </div>
                        <div class="col-md-0">
                            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#ModalAgregarProducto"><span class="glyphicon glyphicon-search"></span></button>
                        </div>

                        <label class="control-label col-md-8">Codigo<span style="color:red">*</span></label>
                        <div class="col-md-4">
                            <input type="text" id="prod_Codigo" placeholder="" class="form-control" readonly />
                            <div id="ErrorProducto_Create">
                                @Html.ValidationMessageFor(model => model.prod_Codigo)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.tbProducto.prod_Descripcion, "Producto", new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" id="prod_Descripcion" placeholder="" class="form-control" readonly />
                            @Html.ValidationMessageFor(model => model.tbProducto.prod_Descripcion)
                        </div>
                        @Html.LabelFor(model => model.tbProducto.uni_Id, "Categoria", new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" id="pcat_Id" placeholder="" class="form-control" readonly />
                            <div id="">
                                @Html.ValidationMessageFor(model => model.tbProducto.uni_Id)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.tbProducto.pscat_Id, "Subcategoria", new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" id="pscat_Id" placeholder="" class="form-control" readonly />
                            @Html.ValidationMessageFor(model => model.tbProducto.pscat_Id)
                        </div>
                        @Html.LabelFor(model => model.tbProducto.uni_Id, "Unidad Medida", new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" id="uni_Id" placeholder="" class="form-control" readonly />
                            @Html.ValidationMessageFor(model => model.tbProducto.uni_Id)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Cantidad Miníma<span style="color:red">*</span></label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.bodd_CantidadMinima, new { htmlAttributes = new { @Value = "", @onkeyup = "format(this)", @autocomplete = "off" } })
                            <div id="ErrorCantidadMinima_Create">@Html.ValidationMessageFor(model => model.bodd_CantidadMinima)</div>

                        </div>
                        <label class="control-label col-md-2">Punto Reorden<span style="color:red">*</span></label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.bodd_PuntoReorden, new { htmlAttributes = new { @Value = "", @onkeyup = "format(this)", @autocomplete = "off" } })
                            <div id="ErrorPuntoReorden_Create">@Html.ValidationMessageFor(model => model.bodd_PuntoReorden)</div>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Cantidad Máxima<span style="color:red">*</span></label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.bodd_CantidadMaxima, new { htmlAttributes = new { @Value = "", @onkeyup = "format(this)", @autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.bodd_CantidadMaxima)
                            <div id="ErrorCantidadMaxima_Create">@Html.ValidationMessageFor(model => model.bodd_CantidadMaxima)</div>
                        </div>

                        <label class="control-label col-md-2">Costo<span style="color:red">*</span></label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.bodd_Costo, new { htmlAttributes = new { @Value = "", @onkeyup = "format(this)", @autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.bodd_Costo)
                            <div id="ErrorCosto_Create">@Html.ValidationMessageFor(model => model.bodd_CantidadMaxima)</div>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Costo Promedio<span style="color:red">*</span></label>
                        <div class="col-md-4">
                            @Html.EditorFor(model => model.bodd_CostoPromedio, new { htmlAttributes = new { @Value = "", @onkeyup = "format(this)", @autocomplete = "off" } })
                            <div id="ErrorCostoPromedio_Create"><p style="color:red">@Html.ValidationMessageFor(model => model.bodd_CostoPromedio)</p> </div>
                            <div id="ErrorNumerico"></div>
                        </div>
                        <div class="col-md-offset-4">
                            <input type="button" value="Agregar" id="AgregarBodegaDetalle_Prueba" class="btn btn-primary" />
                        </div>
                    </div>
                    @*<div class="form-group col-md-1">
            <button class="btn btn-primary" type="button" id="AgregarBodegaDetalle">Añadir</button>
        </div>*@
                    <table id="tblBodega" class="table table table-striped">
                        <thead>
                            <tr>
                                <th>Cod. Barras</th>
                                <th>Producto</th>
                                <th>Descripcion</th>
                                <th>Punto Reorden</th>
                                <th>Cnt. Minima</th>
                                <th>Cnt. Maxima</th>
                                <th>Costo</th>
                                <th>Costo Promedio</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>

                </div>

                    @*<div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <div class="col-md-12">
                                        @Html.Partial("_DetallesProductos", Model.tbProducto, new ViewDataDictionary { { "prod_Codigo", Model.prod_Codigo } })
                                    </div>
                                </div>
                            </div>
                        </div>*@

                </div>
            </div>
        </div>
    </div>
@*</div>*@

<div class="modal fade" id="ModalAgregarProducto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Buscar Productos</h4>
            </div>
            <div class="modal-body" @*id="frmEditarMunicipios"*@>
                @Html.Partial("_BuscarProducto", (List<tbProducto>)ViewBag.Producto)
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

