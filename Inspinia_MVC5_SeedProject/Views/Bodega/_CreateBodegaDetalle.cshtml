@model ERP_GMEDINA.Models.tbBodegaDetalle

@using ERP_GMEDINA.Models


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                @*<div class="ibox-title">
                    <h5>Registrar Detalle Bodega</h5>
                </div>*@
                @*<div class="ibox-content">*@
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-2">Codigo De Barras<span style="color:red">*</span></label>
                        <div class="col-md-4">
                            <input type="text" id="prod_CodigoBarras" placeholder="" class="form-control" onKeyPress="return soloNumeros(event)" autocomplete="off" />
                            <div id="ErrorBarras_Create">
                                @Html.ValidationMessageFor(model => model.tbProducto.prod_CodigoBarras)
                            </div>
                        </div>
                        <div class="col-md-1">
                            <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#ModalAgregarProducto"><span class="glyphicon glyphicon-search"></span></button>
                        </div>
                        @Html.LabelFor(model => model.prod_Codigo, "Producto", new { @class = "control-label col-md-1" })
                        <div class="col-md-4">
                            <input type="text" id="prod_Codigo" placeholder="" class="form-control" readonly />
                            <div id="ErrorProducto_Create">
                                @Html.ValidationMessageFor(model => model.prod_Codigo)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.tbProducto.prod_Descripcion, "Producto", new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" id="prod_Descripcion" placeholder="" class="form-control" readonly />
                            @Html.ValidationMessageFor(model => model.tbProducto.prod_Descripcion)
                        </div>
                        @Html.LabelFor(model => model.tbProducto.uni_Id, "Categoria", new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" id="pcat_Id" placeholder="" class="form-control" readonly />
                            <div id="">
                                @Html.ValidationMessageFor(model => model.tbProducto.uni_Id)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.tbProducto.pscat_Id, "Subcategoria", new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" id="pscat_Id" placeholder="" class="form-control" readonly />
                            @Html.ValidationMessageFor(model => model.tbProducto.pscat_Id)
                        </div>
                        @Html.LabelFor(model => model.tbProducto.uni_Id, "Unidad Medida", new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" id="uni_Id" placeholder="" class="form-control" readonly />
                            @Html.ValidationMessageFor(model => model.tbProducto.uni_Id)
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Cantidad Miníma<span style="color:red">*</span></label>
                        <div class="col-md-4">
                            @*@Html.EditorFor(model => model.bodd_CantidadMinima, new { htmlAttributes = new { @Value = "", @onkeyup = "format(this)", onKeyPress = "return soloNumeros(event)", @autocomplete = "off" } })*@
                            <input type="text" id="bodd_CantidadMinima" placeholder="" class="form-control" autocomplete="off" , onKeyPress="return camposDecimales(event)" />
                            <div id="ErrorCantidadMinima_Create">@Html.ValidationMessageFor(model => model.bodd_CantidadMinima)</div>

                        </div>
                        <label class="control-label col-md-2">Punto Reorden<span style="color:red">*</span></label>
                        <div class="col-md-4">
                            @*@Html.EditorFor(model => model.bodd_PuntoReorden, new { htmlAttributes = new { @Value = "", @onkeyup = "format(this)", @autocomplete = "off" , onKeyPress = "return soloNumeros(event)" } })*@
                            <input type="text" id="bodd_PuntoReorden" placeholder="" class="form-control" autocomplete="off" , onKeyPress="return camposDecimales(event)" />
                            <div id="ErrorPuntoReorden_Create">@Html.ValidationMessageFor(model => model.bodd_PuntoReorden)</div>

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">Cantidad Máxima<span style="color:red">*</span></label>
                        <div class="col-md-4">
                            @*@Html.EditorFor(model => model.bodd_CantidadMaxima, new { htmlAttributes = new { @Value = "", @onkeyup = "format(this)", @autocomplete = "off" , onKeyPress = "return soloNumeros(event)" } })*@
                            <input type="text" id="bodd_CantidadMaxima" placeholder="" class="form-control" autocomplete="off" , onKeyPress="return camposDecimales(event)" />
                            @Html.ValidationMessageFor(model => model.bodd_CantidadMaxima)
                            <div id="ErrorCantidadMaxima_Create">@Html.ValidationMessageFor(model => model.bodd_CantidadMaxima)</div>
                        </div>

                        <label class="control-label col-md-2">Costo<span style="color:red">*</span></label>
                        <div class="col-md-4">
                            @*@Html.EditorFor(model => model.bodd_Costo, new { htmlAttributes = new { @Value = "", @onkeyup = "format(this)", @autocomplete = "off" , onKeyPress = "return soloNumeros(event)" } })*@
                            <input type="text" id="bodd_Costo" placeholder="" class="form-control" autocomplete="off" , onKeyPress="return camposDecimales(event)" />
                            @Html.ValidationMessageFor(model => model.bodd_Costo)
                            <div id="ErrorCosto_Create">@Html.ValidationMessageFor(model => model.bodd_CantidadMaxima)</div>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Costo Promedio<span style="color:red">*</span></label>
                        <div class="col-md-4">
                            @*@Html.EditorFor(model => model.bodd_CostoPromedio, new { htmlAttributes = new { @Value = "", @onkeyup = "format(this)", @autocomplete = "off", onKeyPress = "return soloNumeros(event)" } })*@
                            <input type="text" id="bodd_CostoPromedio" placeholder="" class="form-control" autocomplete="off" , onKeyPress="return camposDecimales(event)" />
                            <div id="ErrorCostoPromedio_Create"><p style="color:red">@Html.ValidationMessageFor(model => model.bodd_CostoPromedio)</p> </div>
                            <div id="ErrorNumerico"></div>
                        </div>
                        <div class="col-md-offset-4">
                            <input type="button" value="Agregar" id="AgregarBodegaDetalle_Prueba" class="btn btn-primary btn-sm" />
                        </div>
                    </div>
                    <table class="table table-striped table-responsive table-bordered table-hover" id="tbBodega">
                        <thead>
                            <tr>
                                <th class="col-lg-2">
                                    Cod. Barras
                                </th>
                                <th class="col-lg-10">
                                    Cod. Producto
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.tbProducto.prod_Descripcion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.bodd_CantidadMinima)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.bodd_PuntoReorden)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.bodd_CantidadMaxima)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.bodd_Costo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.bodd_CostoPromedio)
                                </th>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                </div>
            </div>
        </div>
    </div>
@*</div>*@

<div class="modal fade" id="ModalAgregarProducto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Buscar Productos</h4>
                @Html.Partial("_BuscarProducto", (List<SDP_Inv_tbProducto_Select_Result>)ViewBag.Producto)
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

