@model ERP_GMEDINA.Models.tbBodegaDetalle
@using ERP_GMEDINA.Models



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <h5>Registrar Detalle Bodega</h5>
            <div class="ibox-content">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.prod_Codigo, "Producto", new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" id="prod_Codigo" placeholder="" class="form-control" />
                            <div id="ErrorProducto_Create">
                                @Html.ValidationMessageFor(model => model.prod_Codigo)
                            </div>
                        </div>
                        <div class="col-md-1">
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalAgregarProducto"><span class="glyphicon glyphicon-search"></span></button>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.tbProducto.prod_Descripcion, "Descripcion", new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" id="prod_Descripcion" placeholder="" class="form-control" readonly />
                            @Html.ValidationMessageFor(model => model.tbProducto.prod_Descripcion)
                        </div>
                        @Html.LabelFor(model => model.tbProducto.uni_Id, "Categoria", new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" id="pcat_Id" placeholder="" class="form-control" readonly />
                            <div id="">
                                @Html.ValidationMessageFor(model => model.tbProducto.uni_Id)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.tbProducto.pscat_Id, "Subcategoria", new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" id="pscat_Id" placeholder="" class="form-control" readonly />
                            @Html.ValidationMessageFor(model => model.tbProducto.pscat_Id)
                        </div>
                        @Html.LabelFor(model => model.tbProducto.uni_Id, "Unidad Medida", new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="text" id="uni_Id" placeholder="" class="form-control" readonly />
                            @Html.ValidationMessageFor(model => model.tbProducto.uni_Id)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.bodd_PuntoReorden, new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="number" id="bodd_PuntoReorden" placeholder="" class="form-control" />
                            <div id="ErrorPuntoReorden_Create">
                                @Html.ValidationMessageFor(model => model.bodd_PuntoReorden)
                            </div>
                        </div>
                        @Html.LabelFor(model => model.bodd_CantidadMinima, new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="number" id="bodd_CantidadMinima" placeholder="" class="form-control" />
                            <div id="ErrorCantidadMinima_Create">
                                @Html.ValidationMessageFor(model => model.bodd_CantidadMinima)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.bodd_CantidadMaxima, new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="number" id="bodd_CantidadMaxima" placeholder="" class="form-control" />
                            <div id="ErrorantidadMaxima_Create">
                                @Html.ValidationMessageFor(model => model.bodd_CantidadMaxima)
                            </div>
                        </div>

                        @Html.LabelFor(model => model.bodd_Costo, new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="number" id="bodd_Costo" placeholder="" class="form-control" />
                            @Html.ValidationMessageFor(model => model.bodd_Costo)
                            <div id="ErrorCosto_Create">
                                @Html.ValidationMessageFor(model => model.bodd_CantidadMaxima)
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.bodd_CostoPromedio, new { @class = "control-label col-md-2" })
                        <div class="col-md-4">
                            <input type="number" id="bodd_CostoPromedio" placeholder="" class="form-control" />
                            <div id="ErrorCostoPromedio_Create">
                                @Html.ValidationMessageFor(model => model.bodd_CostoPromedio)
                            </div>
                        </div>

                    </div>
                    <div class="ibox-tools">
                        <input type="button" value="Agregar" id="AgregarBodegaDetalle" class="btn btn-primary" />
                    </div>
                    <table id="tblBodegadetalle_Create" class="table table table-striped">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Punto Reorden</th>
                                <th>Cnt. Minima</th>
                                <th>Cnt. Maxima</th>
                                <th>Costo</th>
                                <th>Costo Promedio</th>
                                <th>Quitar</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<div class="modal fade" id="ModalAgregarProducto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Buscar Productos</h4>
            </div>
            <div class="modal-body" id="frmEditarMunicipios">
                @Html.Partial("_BuscarProducto", (List<tbProducto>)ViewBag.Producto)
            </div>
        </div>
    </div>
</div>
