@model ERP_GMEDINA.Models.tbListaPrecio
@using ERP_GMEDINA.Models
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Lista Precio</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Index","ListaPrecios")">Regresar</a>        
        </div>
    </div>
</div>
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Detalles Lista Precio</h5>
                </div>
                <div class="ibox-content">


                    <dl class="dl-horizontal">
                        <br\>  </br\>
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.listp_Id)
                        @*Auditoria*@
                        @Html.HiddenFor(model => model.listp_UsuarioCrea)
                        @Html.HiddenFor(model => model.listp_FechaCrea)
                        @Html.HiddenFor(model => model.listp_UsuarioModifica)
                        @Html.HiddenFor(model => model.listp_FechaModifica)
                        @Html.HiddenFor(model => model.tbUsuario.usu_Nombres)
                        @Html.HiddenFor(model => model.tbUsuario.usu_Apellidos)
                        @Html.HiddenFor(model => model.tbUsuario1.usu_Nombres)
                        @Html.HiddenFor(model => model.tbUsuario1.usu_Apellidos)
                        <dt>
                            @Html.DisplayNameFor(model => model.listp_Nombre)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.listp_Nombre)
                        </dd>


                        <dt>

                            @Html.DisplayNameFor(model => model.listp_EsActivo)
                        </dt>
                            @if (Model.listp_EsActivo)
                            {
                                <dd>Sí</dd>
                            }
                            else
                            {
                                <dd>No</dd>
                            }
                        
                        <dt>
                            @Html.DisplayNameFor(model => model.listp_Prioridad)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.listp_Prioridad)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.listp_FechaInicioVigencia)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.listp_FechaInicioVigencia)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.listp_FechaFinalVigencia)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.listp_FechaFinalVigencia)
                        </dd>
                    </dl>
          
                    <div class="ibox-content">
                        @Html.Partial("_DetailsListaPrecioDetalle", Model.tbListadoPrecioDetalle)
                    </div>


                    @Html.ActionLink("Editar", "Edit", new { id = Model.listp_Id }, new { @class = "btn btn-primary" })
                 
                    
                </div>
            </div>
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Auditoría</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table table-striped  table-bordered">
                        <tr>
                            <th>Acción</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                        </tr>
                        <tr>
                            <td>Creado</td>
                            <td>
                                @Html.DisplayFor(model => model.tbUsuario.usu_Nombres)
                                @Html.DisplayFor(model => model.tbUsuario.usu_Apellidos)
                            </td>
                            <td>@Html.DisplayFor(model => model.listp_FechaCrea)</td>
                        </tr>
                        <tr>
                            <td>Modificado</td>
                            <td>
                                @Html.DisplayFor(model => model.tbUsuario1.usu_Nombres)
                                @Html.DisplayFor(model => model.tbUsuario1.usu_Apellidos)
                            </td>
                            <td>@Html.DisplayFor(model => model.listp_FechaModifica)</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>












