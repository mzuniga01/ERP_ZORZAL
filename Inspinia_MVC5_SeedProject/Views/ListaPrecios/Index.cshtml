@model IEnumerable<ERP_GMEDINA.Models.tbListaPrecio>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Lista Precios</h2>
       
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado Precios</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Registrar Lista Precio", "Create", null, new { @class = "btn btn-primary btn-sm" })
                    </div>
                </div>
                <div class="ibox-content">
                  

                    <table class="table table-striped table-bordered table-hover" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.listp_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.listp_Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.listp_EsActivo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.listp_Prioridad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.listp_FechaInicioVigencia)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.listp_FechaFinalVigencia)
                                </th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model)
                            {
                                <tr>


                                    <td>
                                        @Html.DisplayFor(modelItem => item.listp_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.listp_Nombre)
                                    </td>
                                   
                                     @if (item.listp_EsActivo)
                                     {
                                        <td>Sí</td>
                                        }
                                        else
                                        {
                                         <td>No</td>
                                        }
                                    <td>
                                        @Html.DisplayFor(modelItem => item.listp_Prioridad)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.listp_FechaInicioVigencia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.listp_FechaFinalVigencia)
                                    </td>

                                    <td>
                                        @Html.ActionLink("Detalles", "Details", new { id = item.listp_Id }, new { @class = "btn btn-primary btn-xs" })
                                        @Html.ActionLink("Editar", "Edit", new { id = item.listp_Id }, new { @class = "btn btn-primary btn-xs" })
                             
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>