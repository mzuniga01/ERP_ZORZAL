@model IEnumerable<ERP_GMEDINA.Models.tbPago>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Pagos</h2>
        
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Pago</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Registrar Pago", "Create", null, new { @class = "btn btn-primary "})
					</div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-responsive" style="width:100%" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.pago_FechaElaboracion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.tbFactura.fact_Codigo)
                                </th>
                                <th>
                                    Tipo Pago
                                    @*@Html.DisplayNameFor(model => model.tbTipoPago.tpa_Descripcion)*@
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pago_SaldoAnterior)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pago_TotalPago)
                                </th>
                                <th>
                                    Cliente
                                    @*@Html.DisplayNameFor(model => model.tbFactura.clte_Nombres)*@
                                </th>
                                <th>
                                    Acciones
                                    @*@Html.DisplayNameFor(model => model.tbFactura.clte_Nombres)*@
                                </th>
                                


                                <th></th>
                            </tr>
                            </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pago_FechaElaboracion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbFactura.fact_Codigo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbTipoPago.tpa_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pago_SaldoAnterior)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pago_TotalPago)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbFactura.tbCliente.clte_Nombres)
                                    </td>


                                    <td>
                                        @Html.ActionLink("Detalle", "Details", new { id = item.pago_Id }, new { @class = "btn btn-primary btn-xs" })
                                        @Html.ActionLink("Editar", "Edit", new { id = item.pago_Id }, new { @class = "btn btn-white btn-xs" })
                                        @Html.ActionLink("Imprimir", "", new { id = item.pago_Id }, new { @class = "btn btn-white btn-xs" })
                                        @*@Html.ActionLink("Delete", "Delete", new { id=item.pago_Id }, new { @class = "btn btn-white btn-sm"})*@
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>

                </div>
            </div>

        </div>
    </div>
 </div>



<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>