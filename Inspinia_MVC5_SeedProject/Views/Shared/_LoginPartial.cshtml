@using Microsoft.AspNet.Identity
@using ERP_GMEDINA.Models
@{
    string UserName = "";
    int UserId = 0;
    Helpers Login = new Helpers();
    List<tbUsuario> User = Login.getUserInformation();
    foreach (tbUsuario Usuario in User)
    {
        UserName = Usuario.usu_Nombres + " " + Usuario.usu_Apellidos;
        UserId = Usuario.usu_Id;
    }
}


@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-top-links navbar-right">
        <li>
            @Html.ActionLink("Hello " + @UserName + "!", "Manage", "Account", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-top-links navbar-right">
        <li class="dropdown">
          <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            @UserName
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
              <li>
                  @Html.ActionLink("Modificar Cuenta", "ModificarCuenta", "Usuario", routeValues: new { id = UserId }, htmlAttributes: new { id = "ModAccountLink" })
              </li>
              <li>
                  @Html.ActionLink("Modificar Contraseña", "ModificarPass", "Usuario", routeValues: new { id = UserId }, htmlAttributes: new { id = "ModPass" })
              </li>
          </ul>
        </li>

    <li>@Html.ActionLink("Cerrar Sesión", "CerrarSesion", "Login", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
