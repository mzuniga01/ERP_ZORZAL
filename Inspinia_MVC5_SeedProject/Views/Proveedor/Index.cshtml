@model IEnumerable<ERP_GMEDINA.Models.tbProveedor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Proveedores</h2>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Proveedores</h5>
                    <div class="ibox-tools">
                        @Html.ActionLink("Registrar Proveedor", "Create", null, new { @class = "btn btn-primary" })
                    </div>
                </div>
                <div class="ibox-content">

                    <table  class="table table table-striped  table-bordered" style="width:100%" id="dataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.prov_RTN)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.prov_Nombre)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.prov_NombreContacto)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.prov_Direccion)
                                </th>
                               
                                <th>
                                    @Html.DisplayNameFor(model => model.prov_Telefono)
                                </th>

                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.prov_RTN)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.prov_Nombre)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.prov_NombreContacto)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.prov_Direccion)
                                    </td>
                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prov_Telefono)
                                    </td>


                                    <td>
                                        @Html.ActionLink("Detalle", "Details", new { id = item.prov_Id }, new { @class = "btn btn-primary btn-xs" })
                                        @Html.ActionLink("Editar", "Edit", new { id = item.prov_Id }, new { @class = "btn btn-white btn-xs" })
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script>
    $(document).ready(function () {
        $('#dataTable').DataTable({

        "searching": true,
        "oLanguage": {
            "oPaginate": {
                "sNext": "Siguiente",
                "sPrevious": "Anterior",
            },
            "sZeroRecords": "No se encontraron resultados",
            "sInfoFiltered": "(filtrado de un total de _MAX_ registros)",
            "sEmptyTable": "No hay registros",
            "sInfoEmpty": "Mostrando 0 de 0 Entradas",
            "sSearch": "Buscar",
            "sLengthMenu": "Mostrar _MENU_Registros Por Página",
            "sInfo": "Mostrando _START_ a _END_ Entradas"


        },

            });
    });
</script>


