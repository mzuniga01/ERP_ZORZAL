
@model ERP_GMEDINA.Models.tbProveedor

@{
                /**/

                ViewBag.Title = "Create";
                Layout = "~/Views/Shared/_Layout.cshtml";
}


          
      



<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Proveedor</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Proveedor</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                    
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)


                            <div class="form-group">
                                @Html.LabelFor(model => model.prov_RTN, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.prov_RTN, new { htmlAttributes = new { @maxlength = "14", @autocomplete = "off" } })
                                    <p style="color:red" id="Rtn_Error">@Html.ValidationMessageFor(model => model.prov_RTN)</p>
                                  
                                    <div id="validationRTN">
                                        <p style="color:red"></p>
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.prov_Nombre, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.prov_Nombre, new { htmlAttributes = new { @maxlength = "50", @onKeyPress = "return CaracteresNombre(event)", @onkeyup = "this.value=NumText(this.value)", @autocomplete = "off" } })
                                    <p style="color:red" id="NombreError">@Html.ValidationMessageFor(model => model.prov_Nombre)</p>
                                    <div id="validationNombre">
                                        <p style="color:red"></p>
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.prov_NombreContacto, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.prov_NombreContacto, new { htmlAttributes = new { @maxlength = "50", @onKeyPress = "return soloLetras(event)", @onkeyup = "this.value=NumText(this.value)", @autocomplete = "off" } })
                                    <p style="color:red" id="ContactoError"> @Html.ValidationMessageFor(model => model.prov_NombreContacto)</p>

                                    <div id="validationContacto">
                                        <p style="color:red"></p>
                                    </div>
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-md-2">Direccion<span style="color:red">*</span></label>
                                <div class="col-md-4">

                                    @Html.TextAreaFor(model => model.prov_Direccion, new { @class = "form-control", MaxLength = 200, @onKeyPress = "return CaracteresNombre(event)", @onkeyup = "this.value=NumText1(this.value)", @autocomplete = "off" })
                                    <p style="color:red" id="DireccionError">
                                        @Html.ValidationMessageFor(model => model.prov_Direccion)
                                    </p>
                                    <div id="validationDireccion">
                                        <p style="color:red"></p>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.prov_Email, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.TextBoxFor(model => model.prov_Email, new { @class = "form-control", @onKeyPress = "return CaracteresNombre(event)", @onkeyup = "this.value=NumText(this.value)", @autocomplete = "off" })

                                  
                                    <div id="validationEmail">
                                        <p style="color:red"></p>
                                    </div>

                                    <div id="MessageForCorreo">
                                        <p style="color:red"> @Html.ValidationMessageFor(model => model.prov_Email)</p>
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.prov_Telefono, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.prov_Telefono, new { htmlAttributes = new { @maxlength = "25", @onKeyPress = "return CaracteresNombre(event)", @onkeyup = "this.value=NumText(this.value)", @autocomplete = "off" } })
                                    <p style="color:red" id="TelefonoError">
                                        @Html.ValidationMessageFor(model => model.prov_Telefono)
                                    </p>

                                    <div id="validationTelefono">
                                        <p style="color:red"></p>
                                    </div>

                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.acte_Id, new { @class = "control-label col-md-2" })
                                <div class="col-md-4">

                                    @Html.DropDownList("acte_Id", (IEnumerable<SelectListItem>)ViewBag.Actividad, "Seleccione", new { @class = "form-control" })
                                    <p style="color:red">
                                        @Html.ValidationMessageFor(model => model.acte_Id)
                                    </p>

                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    @*<input type="submit" value="Guardar" class="btn btn-primary" />*@
                                    <button type="button" id="btnGuardar" class="btn btn-primary">Guardar</button>
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/app/ValidacionProveedor.js"></script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        jQuery('input,select').each(function () {
            var req = jQuery(this).attr('data-val-required');
            if (undefined != req) {
                var label = jQuery('label[for="' + jQuery(this).attr('id') + '"]');
                var text = label.text();
                if (text.length > 0) {
                    label.append('<span style="color:red"> *</span>');
                }
            }
        });

    </script>
}