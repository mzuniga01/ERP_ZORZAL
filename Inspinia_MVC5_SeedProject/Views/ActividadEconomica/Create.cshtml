@model ERP_GMEDINA.Models.tbActividadEconomica

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutFacturacion.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Actividad Económica</h2>

    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Index", "ActividadEconomica")">Regresar</a>
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Actividad Económica</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="form-group">
                                <label class="control-label col-md-2 AsteriscoRojo">Descripción</label>
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.acte_Descripcion, new
                               {
                                   htmlAttributes = new
                                   {
                                       @class = "form-control",
                                       @autocomplete = "off",
                                       @style = "text-transform:uppercase;",
                                       onkeypress = "return validar(event)",
                                       maxlength = 50
                                   }
                               })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.acte_Descripcion)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/app/General/CaracteresEspeciales.js"></script>

