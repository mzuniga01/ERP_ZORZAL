@model ERP_GMEDINA.Models.tbUnidadMedida

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/Auditoria.css" rel="stylesheet" />
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Unidad de Medida</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            @Html.ActionLink("Regresar", "Index")
        </div>
    </div>
</div>



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Editar Unidad de Medida</h5>
                </div>
                <div class="ibox-content">

				@using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
    
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.uni_Id)
                        @Html.HiddenFor(model => model.uni_UsuarioCrea)
                        @Html.HiddenFor(model => model.uni_FechaCrea)
                        @Html.HiddenFor(model => model.uni_UsuarioModifica)
                        @Html.HiddenFor(model => model.uni_FechaModifica)
                        @Html.HiddenFor(model => model.tbUsuario.usu_Nombres)
                        @Html.HiddenFor(model => model.tbUsuario.usu_Apellidos)
                        @Html.HiddenFor(model => model.tbUsuario1.usu_Nombres)
                        @Html.HiddenFor(model => model.tbUsuario1.usu_Apellidos)

                        @*Extras usuario crea*@
                        @Html.HiddenFor(model => model.tbUsuario.usu_NombreUsuario)
                        @Html.HiddenFor(model => model.tbUsuario.usu_Password)
                        @Html.HiddenFor(model => model.tbUsuario.usu_Correo)
                        @Html.HiddenFor(model => model.tbUsuario.usu_EsActivo)
                        @Html.HiddenFor(model => model.tbUsuario.usu_EsAdministrador)

                        @*Extras usuario crea*@
                        @Html.HiddenFor(model => model.tbUsuario1.usu_NombreUsuario)
                        @Html.HiddenFor(model => model.tbUsuario1.usu_Password)
                        @Html.HiddenFor(model => model.tbUsuario1.usu_Correo)
                        @Html.HiddenFor(model => model.tbUsuario1.usu_EsActivo)
                        @Html.HiddenFor(model => model.tbUsuario1.usu_EsAdministrador)

                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.uni_Id)

                        <div class="form-group">
                            @Html.LabelFor(model => model.uni_Id, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.uni_Id, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                @Html.ValidationMessageFor(model => model.uni_Id)
                            </div>
                        </div>



                        <div class="form-group">
                            @Html.LabelFor(model => model.uni_Descripcion, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.uni_Descripcion)
                                <p style="color:red">@Html.ValidationMessageFor(model => model.uni_Descripcion)</p>
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.uni_Abreviatura, new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.EditorFor(model => model.uni_Abreviatura)
                                <p style="color:red">@Html.ValidationMessageFor(model => model.uni_Abreviatura)</p>
                            </div>
                        </div>

        

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
				                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white"})
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
            <div class="ibox-content">
                <table class="table table-striped">
                    <tr>
                        <th>Acción</th>
                        <th>Usuario</th>
                        <th>Fecha</th>
                    </tr>
                    <tr>
                        <td>Creado</td>
                        <td>
                            @Html.DisplayFor(model => model.tbUsuario.usu_Nombres)
                            @Html.DisplayFor(model => model.tbUsuario.usu_Apellidos)
                        </td>
                        <td>@Html.DisplayFor(model => model.uni_FechaCrea)</td>
                    </tr>
                    <tr>
                        <td>Modificado</td>
                        <td>
                            @Html.DisplayFor(model => model.tbUsuario1.usu_Nombres)
                            @Html.DisplayFor(model => model.tbUsuario1.usu_Apellidos)
                        </td>
                        <td>@Html.DisplayFor(model => model.uni_FechaModifica)</td>
                    </tr>
                </table>
            </div>
    </div>
 </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
