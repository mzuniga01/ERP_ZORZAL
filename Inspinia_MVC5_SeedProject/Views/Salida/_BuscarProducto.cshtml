@model IEnumerable<ERP_GMEDINA.Models.tbBodegaDetalle>
@using ERP_GMEDINA.Models

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <table id="tblBusquedaGenerica" class="table table-striped table-responsive table-bordered table-hover" style="width:100%">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.tbProducto.prod_Descripcion)
                                </th>
                                <td>
                                    @Html.DisplayNameFor(model => model.tbProducto.prod_Marca)
                                </td>

                                <td>
                                    @Html.DisplayNameFor(model => model.tbProducto.prod_Modelo)
                                </td>
                                <th>
                                    Acciones
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    @Html.HiddenFor(modelItem => item.tbProducto.tbProductoSubcategoria.tbProductoCategoria.pcat_Id)
                                   
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbProducto.prod_Descripcion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbProducto.prod_Marca)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tbProducto.prod_Modelo)
                                    </td>
                                    <td>
                                        <button class="btn btn-primary btn-xs" value="@item.tbProducto.prod_CodigoBarras" id="seleccionar" data-dismiss="modal">Seleccionar</button>
                                    </td>
                                </tr>
                                }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}