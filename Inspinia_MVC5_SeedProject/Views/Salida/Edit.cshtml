<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h3><b>Listado de Salida</b></h3>
                    
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm("Edit", "Salida", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        @Html.HiddenFor(model => model.sal_Id)
                        @*<input type="hidden" name="sal_Id" id="sal_Id" value="@ViewBag.IdSal">*@
                        <div class="form-horizontal">

                            <fieldset class="box-border">
                                <legend class="box-border">Datos Generales</legend>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.sal_FechaElaboracion, "Fecha de Elaboración", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.sal_FechaElaboracion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        @Html.ValidationMessageFor(model => model.sal_FechaElaboracion)
                                    </div>
                                </div>
                                @*, "{0:yyyy-MM-dd}", new { htmlAttributes = new { @id = "FechaElaboracionSalida" } }*@

                                <div class="form-group">
                                    @Html.LabelFor(model => model.bod_Id, "Nombre de Bodega", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.tbBodega.bod_Nombre, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        <div style="display:none" class="col-md-4">
                                            @Html.DropDownList("bod_Id", null, htmlAttributes: new { @class = "form-control" })
                                            <p style="color:red">@Html.ValidationMessageFor(model => model.bod_Id)</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                   @Html.LabelFor(model => model.estm_Id, "Estado", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.tbEstadoMovimiento.estm_Descripcion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        <div style="display:none" class="col-md-4">
                                            @Html.DropDownList("estm_Id", null, htmlAttributes: new { @class = "form-control" })
                                            <p style="color:red">@Html.ValidationMessageFor(model => model.estm_Id)</p>
                                        </div>
                                    </div>
                                </div>
                               

                                <div class="form-group">
                                    @Html.LabelFor(model => model.tsal_Id, "Tipo de Salida", new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.tbTipoSalida.tsal_Descripcion, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        <div style="display:none" class="col-md-4">
                                            @Html.DropDownList("tsal_Id", null, htmlAttributes: new { @class = "form-control" })
                                            <p style="color:red">@Html.ValidationMessageFor(model => model.tsal_Id)</p>
                                        </div>
                                    </div>
                                </div>


                            </fieldset>
                        </div>

                        <div class="form-horizontal" id="VentaoDevolucion" style="display:none">
                            <fieldset class="box-border">
                                <legend class="box-border" id="TitleVenta">Venta</legend>
                                <legend class="box-border" id="TitleDevolucion">Devolucion</legend>
                                <div class="form-group">
                                    @Html.LabelFor(model => model.fact_Codigo, new { @class = "control-label col-md-2" })
                                    <div class="col-md-4">
                                        @Html.EditorFor(model => model.tbFactura.fact_Codigo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                                        <p style="color:red">
                                           
                                            @Html.ValidationMessageFor(model => model.fact_Codigo)
                                        </p>
                                    </div>

                                    <div id="div_sal_RazonDevolucion">
                                        @Html.LabelFor(model => model.sal_RazonDevolucion, new { @class = "control-label col-md-2" })
                                        <div class="col-md-4">
                                            @Html.EditorFor(model => model.sal_RazonDevolucion)
                                            <p style="color:red">
                                                @Html.ValidationMessageFor(model => model.sal_RazonDevolucion)
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>

                                    <div class="form-horizontal" id="Prestamo" style="display:none">
                                        <fieldset class="box-border">
                                            <legend class="box-border">Prestamo</legend>
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.sal_BodDestino, "Bodega de Destino", new { @class = "control-label col-md-2" })
                                                <div class="col-md-4">
                                                    @Html.DropDownList("sal_BodDestino", (IEnumerable<SelectListItem>)ViewBag.sal_BodDestino, new { @class = "form-control" })
                                                    <p style="color:red">
                                                        @Html.ValidationMessageFor(model => model.sal_BodDestino)
                                                    </p>
                                                </div>
                                            </div>
                                        </fieldset>
                                    </div>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                                <input type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalAplicar" value="Aplicar" />
                                <input type="button" class="btn btn-danger" data-toggle="modal" data-target="#ModalAnular" value="Anular" />
                                @{
                                    var Activo = Model.estm_Id;
                                    if (Activo == 4)
                                    {
                                        <input type="button" class="btn btn-danger" data-toggle="modal" data-target="#ModalInactivar" value="Inactivar" />
                                    }
                                    else if (Activo == 3)
                                    {
                                        <input type="button" class="btn btn-primary" data-toggle="modal" data-target="#ModalActivar" value="Activar" />
                                    }
                                }

                                @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                            </div>
                        </div>
                        
                        <div class="modal fade" id="Nuevo" tabindex="-1" role="dialog" aria-labelledby="DetalleNumeracion" aria-hidden="true">
                           
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Seleccione un Producto</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body" id="AjaxCreateNumeracion">
                                        @Html.Partial("_CreateEditSalidaDetalle", new ERP_GMEDINA.Models.tbSalidaDetalle())
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*<div class="row">
                    <div class="col-lg-12">
                        <div class="ibox float-e-margins">
                            <div class="ibox-title">
                                <div class="title-action">
                                    <div class="box-border">
                                        <h5></h5>
                                        <button type="button" class="btn btn-whiteglyphicon glyphicon-download" data-toggle="collapse" data-target="#Crear">Agregar Producto</button>
                                    </div>
                                </div>
                            </div>
                            <div class="ibox-content collapse" id="Crear">
                                @Html.Partial("_CreateEditSalidaDetalle", new tbSalidaDetalle())
                            </div>
                        </div>
                    </div>
                </div>*@

                        @* Llama la vista  *@
                        <div class="ibox float-e-margins">
                            <div class="ibox-content">

                                <div class="row">

                                    <div class="col-lg-12">
                                        <div class="ibox-content">

                                            <fieldset class="box-border">
                                                <div class="ibox-tools">
                                                    <button type="button" id="btnModalGuardarNumeracion" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#Nuevo">
                                                        Agregar Producto
                                                    </button>
                                                </div>
                                                <legend class="box-border">SalidaDetalle</legend>
                                                @Html.Partial("_EditSalidaDetalle", Model.tbSalidaDetalle, new ViewDataDictionary(new { clave = Model.sal_Id }))
                                            </fieldset>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        @*botones*@

                        <br />
                    }

                </div>
            </div>
        </div>
    </div>
</div>
