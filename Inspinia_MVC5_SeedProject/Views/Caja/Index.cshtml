@model IEnumerable<ERP_GMEDINA.Models.tbCaja>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Caja</h2>
        <ol class="breadcrumb">
            <li class="active">
                <strong></strong>
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Caja</h5>
					<div class="ibox-tools">
						@Html.ActionLink("Registrar Caja", "Create", null, new { @class = "btn btn-primary"})
					</div>
                </div>
                <div class="ibox-content">

<table class="table table-striped table-responsive table-bordered table-hover" id="DataTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.suc_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cja_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cja_Descripcion)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>

    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.tbSucursal.suc_Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cja_Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cja_Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Detalles", "Details", new { id = item.cja_Id }, new { @class = "btn btn-primary btn-xs" })
                    @Html.ActionLink("Editar", "Edit", new { id = item.cja_Id }, new { @class = "btn btn-white btn-xs" })
                </td>
            </tr>
        }
    </tbody>
</table>

                </div>
            </div>
        </div>
    </div>
 </div>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>


