@model ERP_GMEDINA.Models.tbPedidoDetalle
@using ERP_GMEDINA.Models


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Pedidos Detalles</h5>
                </div>
                <div class="ibox-content">

                    @*@using (Html.BeginForm())*@
                    @*@Html.AntiForgeryToken()*@

                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)

                        <div class="form-horizontal">
                            <div class="form-group">
                                <div class="col-md-offset-10 col-md-2">
                                    <button type="button" class="btn btn-primary btn-sm" id="AñadirPedidoDetalle">Añadir Pedido Detalle</button>
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-md-2">Número Pedido Detalle</label>

                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.pedd_Id)
                                    @Html.ValidationMessageFor(model => model.pedd_Id)
                                </div>

                                <label class="control-label col-md-2">Número Pedido</label>

                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.ped_Id)
                                    @Html.ValidationMessageFor(model => model.ped_Id)
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-md-2">Código Producto</label>

                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.prod_Codigo)
                                    <p style="color:red">
                                        @Html.ValidationMessageFor(model => model.prod_Codigo)
                                </div>
                                <label class="control-label col-md-2">Producto</label>
                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.tbProducto.prod_Descripcion)
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.tbProducto.prod_Descripcion)
                                </div>
                                <div class="col-md-1">
                                    <button type="button" class="btn btn-primary " data-toggle="modal" data-target="#ModalAgregarProducto"><span class="glyphicon glyphicon-search"></span></button>
                                </div>
                            </div>


                            <div class="form-group">
                                <label class="control-label col-md-2">Descripción</label>

                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.pedd_Descripcion)
                                    <div id="validationDescripcionProductoCreate">
                                        @Html.ValidationMessageFor(model => model.pedd_Descripcion)
                                    </div>
                                </div>
                                <label class="control-label col-md-2">Cantidad</label>
                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.pedd_Cantidad)
                                    @Html.ValidationMessageFor(model => model.pedd_Cantidad)
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-2">Precio Unitario</label>

                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.pedd_Cantidad)
                                    @Html.ValidationMessageFor(model => model.pedd_Cantidad)
                                </div>
                        
                                <label class="control-label col-md-2">Cantidad Facturada</label>

                                <div class="col-md-3">
                                    @Html.EditorFor(model => model.pedd_CantidadFacturada)
                                    @Html.ValidationMessageFor(model => model.pedd_CantidadFacturada)
                                </div>
                            </div>

                            <br />
                            <br />


                            <table class="table table-striped table-bordered table-hover dataTables-example" id="tblPedidoDetalle">
                                <thead>
                                    <tr>
                                
                                        <th>Número Producto</th>
                                        <th>Producto</th>
                                        <th>Descripción</th>
                                        <th>Cantidad</th>
                                        <th>Cantidad Facturada</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                       

                                </tbody>
                            </table>






                            <div class="form-group">
                                <div class="col-md-offset-5 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>

                            }

                        </div>
                    </div>
                </div>
            </div>
        </div>

<script src="~/Scripts/app/Producto.js"></script>



        <div>
            <div class="modal fade" id="ModalAgregarProducto" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                            <h4 class="modal-title" id="myModalLabel">Agregar Productos</h4>
                        </div>
                        <div class="modal-body" id="frmEditarMunicipios">

                            @Html.Partial("_IndexProducto", (List<tbProducto>)ViewBag.Producto)
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="~/Scripts/app/SavePedidoDetalle.js"></script>