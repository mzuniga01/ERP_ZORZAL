@model IEnumerable<ERP_GMEDINA.Models.tbProducto>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input id="search" type="text" class="form-control" placeholder="Ingresar producto" />
                            <br />
                        </div>
                    </div>
                    </div>

<table id="tbProductoFactura" class="table table table-striped  table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.prod_Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prod_Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prod_Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prod_Modelo)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody id="ProductoTbody">
        @foreach (var item in Model)
        {

            <tr data-idbarra="@item.prod_CodigoBarras" data-id="@item.prod_Codigo" data-desc="@item.prod_Descripcion">
                <td>
                    @Html.DisplayFor(modelItem => item.prod_Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.prod_Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.prod_Marca)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.prod_Modelo)
                </td>

                <td>
                    <button id="seleccionar" class="btn btn-primary btn-xs">Agregar</button>
                </td>
            </tr>
        }
    </tbody>
</table>
                
                </div>
            </div>
        </div>
    </div>

<script src="~/Scripts/jquery-3.3.1.min.js"></script>


