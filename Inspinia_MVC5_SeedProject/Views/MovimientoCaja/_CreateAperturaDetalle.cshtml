@model ERP_GMEDINA.Models.tbDenominacionArqueo


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Detalle Denominación</h5>
                </div>
                <div class="form-horizontal">
                    @Html.ValidationSummary(true)

                    <div class="form-horizontal">
                        <div class="form-group col-md-12">
                            @Html.LabelFor(model => model.deno_Id, "Denominación", new { @class = "control-label col-md-2" })
                            <div class="col-md-4">
                                @Html.DropDownList("deno_Id", null, "Seleccione Denominación", new { @class = "form-control" })
                                <p id="MensajeErrorDenominacion" style="color:red">@Html.ValidationMessageFor(model => model.deno_Id)</p>
                            </div>
                            <label class="control-label col-md-1">Cantidad</label>
                            <div class="col-md-3">
                            <input type="text" id="Cantidad" name="Cantidad" class="form-control" autocomplete="off" />
                            <p id="MensajeErrorCantidad" style="color:red"></p>
                        </div>
                        <button class="btn btn-primary" type="button" id="AgregarDetalleDenominacion">Añadir</button>
                        </div>
                        <div class="form-group col-md-12">
                            <label class="control-label col-md-2">Valor</label>
                            <div class="col-md-4">
                                <input type="text" id="Valor" disabled name="Valor" class="form-control" autocomplete="off" />
                            </div>
                            <label class="control-label col-md-1">Subtotal</label>
                            <div class="col-md-3">
                                <input type="text" id="Subtotal" disabled name="Subtotal" class="form-control" autocomplete="off" />
                            </div>
                        </div>
                        
                    </div>
                </div>
                <table id="DenominacionDetalle" class="table table-striped table-bordered table-hover dataTables-example">
                    <thead>
                        <tr>
                            <th>Denominacion</th>
                            <th>Cantidad</th>
                            <th>Valor</th>
                            <th>Subtotal</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                    <tfoot>
                        <tr>
                            <td></td>
                            <td></td>
                            <td>Total</td>
                            <td><p id="Total"></p></td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
                <div id="validationSummary">
                    <p style="color:red"></p>
                </div>

            </div>
        </div>
     </div>
</div>
