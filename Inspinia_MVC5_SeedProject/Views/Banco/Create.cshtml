@model ERP_GMEDINA.Models.tbBanco

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Banco</h2>
       </div>
        <div class="col-sm-8">
            <div class="title-action">
                <a href="@Url.Action("Index","Banco")">Regresar</a>
            </div>
        </div>
    </div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Registrar Banco</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.LabelFor(model => model.ban_Nombre, new { @class = "control-label col-md-2" })
                                    <div class="col-md-5">
                                        @Html.EditorFor(model => model.ban_Nombre, new { htmlAttributes = new { @autocomplete = "off", @style = "text-transform:uppercase;", onkeypress = "return validar(event)", @onkeyup = "this.value=Copy(this.value)" } })
                                        <p style="color:red">@Html.ValidationMessageFor(model => model.ban_Nombre)</p>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ban_NombreContacto, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                     @Html.EditorFor(model => model.ban_NombreContacto, new { htmlAttributes = new { autocomplete = "off", @style = "text-transform:uppercase;", onkeypress = "return validar(event)", @onkeyup = "this.value=Copy(this.value)" } })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.ban_NombreContacto)</p>
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.ban_TelefonoContacto, new { @class = "control-label col-md-2" })
                                <div class="col-md-5">
                                    @Html.EditorFor(model => model.ban_TelefonoContacto, new { htmlAttributes = new { @autocomplete = "off", @Placeholder = "(Código Área) Teléfono", onkeypress = "return validartel(event)", @onkeyup = "this.value=Caracteres(this.value)" } })
                                    <p style="color:red">@Html.ValidationMessageFor(model => model.ban_TelefonoContacto) </p>
                                </div>
                            </div>



                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>

                    }

                </div>
            </div>
        </div>
    </div>
</div>

 

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/Banco.js"></script>
<script src="~/Scripts/app/CaracteresEspeciales.js"></script>
<script src="~/Scripts/app/ComandoGuardar.js"></script>
<script>

    jQuery('input,select').each(function () {
        var req = jQuery(this).attr('data-val-required');
        var label = jQuery('label[for="' + jQuery(this).attr('id') + '"]');
        var text = label.text();
        if (text.length > 0) {
            label.append('<span style="color:red"> *</span>');
        }
    });
</script>