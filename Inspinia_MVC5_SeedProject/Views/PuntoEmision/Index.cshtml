@model IEnumerable<ERP_GMEDINA.Models.tbPuntoEmision>
@using ERP_GMEDINA.Models

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Punto Emisión</h2>       
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Punto Emisión</h5>
					<div class="ibox-tools">
                        @*<a href="~/ReportViewer/PuntoEmision.aspx" class = "btn btn-primary">Generar Reporte</a>*@
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                            Generar Reporte
                        </button>
                        @Html.ActionLink("Registrar Punto Emisión", "Create", null, new { @class = "btn btn-primary" })
					</div>
                </div>
                <div class="ibox-content">

                    <table class="table table table-striped  table-bordered" id="DataTable">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.pemi_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.pemi_NumeroCAI)
                                </th>
                                <th>Acción</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pemi_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pemi_NumeroCAI)
                                    </td>
                                   
                                    <td>
                                        @Html.ActionLink("Detalles", "Details", new { id = item.pemi_Id }, new { @class = "btn btn-primary btn-xs" })  
                                        @Html.ActionLink("Editar", "Edit", new { id = item.pemi_Id }, new { @class = "btn btn-white btn-xs" })   
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
 </div>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Generar Reporte</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="GenerarReporteSucursal">
                @Html.Partial("_GenerarReporte", new ERP_GMEDINA.Models.tbSucursal())
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/app/DataTable.js"></script>
