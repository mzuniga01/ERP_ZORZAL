@model IEnumerable<ERP_GMEDINA.Models.tbTipoDevolucion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Tipo Devolucion</h2>
        <ol class="breadcrumb">
            <li class="active">
            </li>
        </ol>
    </div>
</div>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Listado de Tipo Devoluciones</h5>
					<div class="ibox-tools">
                        @Html.ActionLink("Registrar Tipo Devolucion", "Create", null, new { @class = "btn btn-primary " })
					</div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-responsive table-bordered table-hover" id="tbObjeto">
                        <thead>
                            <tr>
                                <th>
                                   Numero
                                </th>
                                <th>
                                    Descripcion
                                </th>

                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tdev_Id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.tdev_Descripcion)
                                    </td>

                                    <td>
                                        @Html.ActionLink("Detalles", "Details", new { id = item.tdev_Id }, new { @class = "btn btn-primary btn-xs" })
                                        @Html.ActionLink("Editar", "Edit", new { id = item.tdev_Id }, new { @class = "btn btn-white btn-xs" })

                                    </td>
                                </tr>
                            }
                        </tbody>



                    </table>

                </div>
            </div>
        </div>
    </div>
 </div>

@section scripts{

    <script src="~/Scripts/DataTables/jquery.dataTables.js"></script>
    <script src="~/Scripts/DataTables/dataTables.responsive.js"></script>
    <script src="~/Scripts/DataTables/dataTables.bootstrap.js"></script>
    <script>
    $(document).ready(function () {
        $('#tbObjeto').DataTable({

        "searching": true,
        "oLanguage": {
            "oPaginate": {
                "sNext": "Siguiente",
                "sPrevious": "Anterior",
            },
            "sSearch": "Buscar",
            "sLengthMenu": "Mostrar _MENU_Registros Por Página",
            "sInfo": "Mostrando _START_ a _END_ Entradas"

        },

    });

    });

    </script>
}




