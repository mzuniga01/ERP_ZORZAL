@model ERP_GMEDINA.Models.tbTipoPago

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Tipo Pago</h2>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a href="@Url.Action("Index", "TipoPago")">Regresar</a>
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Detalles Tipo Pago</h5>
                </div>
                <div class="ibox-content">


                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.tpa_Id)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tpa_Id)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.tpa_Descripcion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tpa_Descripcion)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.tpa_Emisor)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tpa_Emisor)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.tpa_Cuenta)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tpa_Cuenta)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.tpa_FechaVencimiento)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tpa_FechaVencimiento)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.tpa_Titular)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tpa_Titular)
                        </dd>



                    </dl>


                    @Html.ActionLink("Editar", "Edit", new { id = Model.tpa_Id }, new { @class = "btn btn-primary" })


                </div>
            </div>
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Auditoría</h5>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered">
                        <tr>
                            <th>Acción</th>
                            <th>Usuario</th>
                            <th>Fecha</th>
                        </tr>
                        <tr>
                            <td>Creado</td>
                            <td>
                                @Html.DisplayFor(model => model.tbUsuario.usu_Nombres)
                                @Html.DisplayFor(model => model.tbUsuario.usu_Apellidos)
                            </td>
                            <td>@Html.DisplayFor(model => model.tpa_FechaCrea)</td>
                        </tr>
                        <tr>
                            <td>Modificado</td>
                            <td>
                                @Html.DisplayFor(model => model.tbUsuario1.usu_Nombres)
                                @Html.DisplayFor(model => model.tbUsuario1.usu_Apellidos)
                            </td>
                            <td>@Html.DisplayFor(model => model.tpa_FechaModifica)</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>













