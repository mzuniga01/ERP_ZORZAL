                </div>
                <div class="ibox-content">

				@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <p style="color:red">@Html.ValidationSummary(true)</p>

        <div class="form-group">
