@model IEnumerable<ERP_GMEDINA.Models.tbCliente>


<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <div class="form-group">
                        <div class="col-md-12">
                            <input id="searchFactura" type="text" class="form-control" placeholder="Ingresar Cliente" />
                            <br />
                        </div>
                    </div>
                </div>
                <table id="DataTable" class="table table table-striped  table-bordered">
                    <tr>
                        <th>
                            Número Cliente
                            @*@Html.DisplayNameFor(model => model.clte_Id)*@
                        </th>
                        <th>
                            RTN/Identidad/Pasaporte
                            @*@Html.DisplayNameFor(model => model.clte_RTN_Identidad_Pasaporte)*@
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.clte_Nombres)
                        </th>

                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        var name = (!item.clte_EsPersonaNatural) ? item.clte_NombreComercial : item.clte_Nombres + ' ' + @item.clte_Apellidos;
                        <tr data-id="@item.clte_Identificacion" data-desc="@item.clte_Nombres" >
                            <td>
                                @Html.DisplayFor(modelItem => item.clte_Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.clte_Identificacion)
                            </td>
                            @{ if (Convert.ToInt32(item.clte_EsPersonaNatural) == 1)
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.clte_Nombres)
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        @Html.DisplayFor(modelItem => item.clte_NombreComercial)
                                    </td>
                                }
                            }
                         

                            <td>
                                <button id="AgregarCliente" class="btn btn-primary btn-xs">Agregar</button>
                            </td>
                        </tr>
                                }

                </table>

            </div>
        </div>
    </div>
</div>


